<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="269.33dip"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_bg"
        android:orientation="vertical"
        >
        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="48px"
            android:drawableRight="@mipmap/xutou_close"
            android:id="@+id/tv_close"
            android:layout_marginRight="20px"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="提示"
            android:textColor="@android:color/black"
            android:textSize="56px"
            android:visibility="visible" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="56px"
            android:text="一天新手标到期后"
            android:textColor="#646464"
            android:textSize="48px"
            android:visibility="visible" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20px"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="自动续投"
                android:textColor="#646464"
                android:textSize="48px"
                android:visibility="visible" />
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="180天产品"
                android:textColor="@color/base_red_color"
                android:textSize="48px"
                android:visibility="visible" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_content_tip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="*续投申请成功即视为您同意续投方案,不可取消"
            android:textColor="@color/base_red_color"
            android:textSize="36px"
            android:visibility="visible"
            android:layout_marginTop="40px"
            android:layout_marginBottom="30px"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d2d2d2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="138px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="确认"
                android:gravity="center"
                android:textColor="#E43F3E"
                android:textSize="56px" />
        </LinearLayout>

        <!-- button pannel -->
        <!-- <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#b2b2b2" /> -->
    </LinearLayout>
</LinearLayout>