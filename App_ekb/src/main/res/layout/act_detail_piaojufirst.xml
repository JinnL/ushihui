<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/immersion_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_title_color"
    android:orientation="vertical" >

    <include layout="@layout/app_base_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <in.srain.cube.views.ptr.PtrClassicFrameLayout
            android:id="@+id/ptr_invest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/touzi_ll"
            android:background="#f2f2f2"
            android:orientation="vertical" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="40px"
                        android:background="#d2d2d2" />

                    <LinearLayout
                        android:id="@+id/ll_top"
                        android:layout_width="match_parent"
                        android:layout_height="128px"
                        android:background="#ffffff"
                        android:gravity="center_vertical" >

                        <ImageView
                            android:id="@+id/image_billtype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="56px"
                            android:layout_marginRight="12px" />

                        <TextView
                            android:id="@+id/tv_name_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="产品名称"
                            android:textColor="#333333"
                            android:textSize="48px" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="56px"
                            android:gravity="right"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/image_isInterest"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/icon_ratecoupon"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/image_isCash"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="14px"
                                android:src="@mipmap/icon_cashcoupon"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/image_isDouble"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="14px"
                                android:src="@mipmap/double_r"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="56px"
                        android:background="#d2d2d2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="56px"
                            android:orientation="vertical" >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/tt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="28px"
                                    android:gravity="center"
                                    android:text="预期年化收益率"
                                    android:textColor="#787878"
                                    android:textSize="36px" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center"
                                    android:layout_marginTop="80px"
                                    android:layout_marginBottom="80px"
                                    android:layout_below="@id/tt"
                                    >
                                    <TextView
                                        android:id="@+id/tv_rate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_below="@id/tt"
                                        android:text="--%"
                                        android:textColor="@color/base_title_color"
                                        android:textSize="108px"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="+--%"
                                        android:id="@+id/tv_activity_rate"
                                        android:textColor="@color/base_title_color"
                                        android:textSize="108px"
                                        />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tv_zuigao"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_corner_redline"
                                    android:paddingBottom="10px"
                                    android:paddingLeft="20px"
                                    android:paddingRight="20px"
                                    android:paddingTop="10px"
                                    android:text="最高--%加息"
                                    android:textColor="#f4524a"
                                    android:textSize="32px"
                                    android:layout_alignBaseline="@+id/tt"
                                    android:layout_alignBottom="@+id/tt"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginRight="26px"
                                    android:layout_marginEnd="26px"
                                    android:visibility="gone"
                                    />

                                <LinearLayout
                                    android:id="@+id/linearLayout1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:layout_below="@+id/tt"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginRight="56px"
                                    android:layout_marginBottom="80px"
                                    >
                                    <TextView
                                        android:id="@+id/tv_kairate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="+--%"
                                        android:textColor="#f4524a"
                                        android:textSize="16sp"
                                        android:visibility="gone"
                                        />

                                    <ImageView
                                        android:id="@+id/iv_dankai"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/dankai_list"
                                        android:visibility="gone"
                                        />

                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/iv_dan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/dan_list"
                                    android:layout_below="@+id/tt"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginRight="56px"
                                    android:layout_marginBottom="80px"
                                    android:layout_marginTop="40px"
                                    android:visibility="gone"
                                    />
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                >

                                <TextView
                                    android:id="@+id/tv_deadline"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="期限--天"
                                    android:textColor="#666666"
                                    android:textSize="40px" />

                                <View
                                    android:layout_width="2px"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="48px"
                                    android:layout_marginRight="48px"
                                    android:background="#d2d2d2" />

                                <TextView
                                    android:id="@+id/tv_leastaAmount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--元起投"
                                    android:textColor="#666666"
                                    android:textSize="40px" />
                            </LinearLayout>

                            <ProgressBar
                                android:id="@+id/progressbar_pert"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="14px"
                                android:layout_gravity="center"
                                android:layout_marginLeft="56px"
                                android:layout_marginRight="56px"
                                android:layout_marginTop="28px"
                                android:layout_weight="1"
                                android:max="100"
                                android:progressDrawable="@drawable/progress_diy"
                                android:secondaryProgress="0" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#d2d2d2" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="104px"
                            android:layout_gravity="center_vertical"
                            android:background="#ffffff"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/pro_start"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="56px"
                                android:gravity="center|left"
                                android:text="产品成立"
                                android:textColor="#787878"
                                android:textSize="36px" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="104px"
                                android:layout_weight="1"
                                android:background="#ffffff"
                                android:gravity="center" >
                            </LinearLayout>

                            <TextView
                                android:id="@+id/pro_end"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="56px"
                                android:gravity="center|right"
                                android:text="产品到期"
                                android:textColor="#787878"
                                android:textSize="36px" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="40px"
                        android:background="#d2d2d2" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="56px"
                        android:background="#d2d2d2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120px"
                        android:background="#ffffff"
                        android:focusable="true"
                        android:gravity="center_vertical" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="56px"
                            android:src="@mipmap/jx" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18px"
                            android:hint="计息方式"
                            android:inputType="number"
                            android:textColor="#787878"
                            android:textSize="48px" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="56px"
                            android:gravity="center|right"
                            android:text="投资成功次日计息"
                            android:textColor="#333333"
                            android:textSize="48px" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="56px"
                        android:background="#d2d2d2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120px"
                        android:background="#ffffff"
                        android:focusable="true"
                        android:gravity="center_vertical" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="56px"
                            android:src="@mipmap/ico_coin_2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18px"
                            android:hint="还款方式"
                            android:inputType="number"
                            android:textColor="#787878"
                            android:textSize="48px" />

                        <TextView
                            android:id="@+id/tv_repaytype"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="56px"
                            android:gravity="center|right"
                            android:text="--"
                            android:textColor="#333333"
                            android:textSize="48px" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="40px"
                        android:background="#d2d2d2" />

                    <LinearLayout
                        android:id="@+id/ll_iphone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:visibility="gone"
                        >
                        <LinearLayout
                            android:id="@+id/ll_gift_act"
                            android:layout_width="match_parent"
                            android:layout_height="120px"
                            android:background="#ffffff"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="56px"
                                android:src="@mipmap/iphone7_icon" />

                            <TextView
                                android:id="@+id/tv_ip7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18px"
                                android:hint="你换iPhone7我买单"
                                android:inputType="number"
                                android:textColor="#787878"
                                android:textSize="48px" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="56px"
                                android:drawableRight="@mipmap/icon_rightto"
                                android:gravity="center|right"
                                android:textColor="#333333"
                                android:textSize="48px" />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginLeft="56px"
                            android:background="#d2d2d2" />
                        <LinearLayout
                            android:id="@+id/ll_gift"
                            android:layout_width="match_parent"
                            android:layout_height="120px"
                            android:background="#ffffff"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="56px"
                                android:src="@mipmap/icon_winning" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18px"
                                android:hint="本期中奖者"
                                android:inputType="number"
                                android:textColor="#787878"
                                android:textSize="48px" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="56px"
                                android:drawableRight="@mipmap/icon_rightto"
                                android:gravity="center|right"
                                android:textColor="#333333"
                                android:textSize="48px" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="56px"
                        android:background="#d2d2d2" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="40px"
                        android:background="#d2d2d2" />

                    <RadioGroup
                        android:id="@+id/rg_invis"
                        android:layout_width="match_parent"
                        android:layout_height="112px"
                        android:background="#ffffff"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/rb_jieshao"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_tab_text"
                            android:button="@null"
                            android:checked="true"
                            android:gravity="center"
                            android:text="项目介绍"
                            android:textColor="@drawable/textcolorchange"
                            android:textSize="16sp" />

                        <RadioButton
                            android:id="@+id/rb_shuoming"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_tab_text"
                            android:button="@null"
                            android:gravity="center"
                            android:text="安全保障"
                            android:textColor="@drawable/textcolorchange"
                            android:textSize="16sp" />

                        <RadioButton
                            android:id="@+id/rb_record"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_tab_text"
                            android:button="@null"
                            android:gravity="center"
                            android:text="投资记录"
                            android:textColor="@drawable/textcolorchange"
                            android:textSize="16sp" />
                    </RadioGroup>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginBottom="16px"
                        android:background="#d2d2d2" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:scrollbars="vertical" >

                        <LinearLayout
                            android:id="@+id/lv_detail_left"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#F2F2F2"
                            android:orientation="vertical"
                            android:visibility="visible" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#FFFFFF"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="128px"
                                    android:background="#F2F2F2"
                                    android:drawableLeft="@mipmap/rectangle"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="60px"
                                    android:paddingRight="80px"
                                    android:text=" 审核项目"
                                    android:textColor="#333333"
                                    android:textSize="44px" />

                                <com.mcz.xhj.yz.dr_view.ListInScroll
                                    android:id="@+id/lv_item_auditing"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="true" >
                                </com.mcz.xhj.yz.dr_view.ListInScroll>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lv_frag_pro_picture"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#FFFFFF"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="128px"
                                    android:background="#F2F2F2"
                                    android:drawableLeft="@mipmap/rectangle"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="60px"
                                    android:paddingRight="80px"
                                    android:text=" 产品资料"
                                    android:textColor="#333333"
                                    android:textSize="48px" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="420px"
                                    android:background="#ffffff"
                                    android:gravity="center"
                                    android:orientation="horizontal" >

                                    <LinearLayout
                                        android:id="@+id/b1"
                                        android:layout_width="156px"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="horizontal" >

                                        <ImageView
                                            android:id="@+id/im1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_margin="10px"
                                            android:gravity="right"
                                            android:src="@mipmap/ico_arrows_l" />
                                    </LinearLayout>

                                    <android.support.v4.view.ViewPager
                                        android:id="@+id/vp_ad"
                                        android:layout_width="wrap_content"
                                        android:layout_height="420px"
                                        android:layout_weight="1"
                                        android:background="#FFFFFF"
                                        android:gravity="center_vertical" >
                                    </android.support.v4.view.ViewPager>

                                    <LinearLayout
                                        android:id="@+id/b2"
                                        android:layout_width="156px"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="horizontal" >

                                        <ImageView
                                            android:id="@+id/im2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_margin="10px"
                                            android:gravity="left"
                                            android:src="@mipmap/ico_arrows_r" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lv_frag_pro_explan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#FFFFFF"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="128px"
                                    android:background="#F2F2F2"
                                    android:drawableLeft="@mipmap/rectangle"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="60px"
                                    android:paddingRight="80px"
                                    android:text=" 产品说明"
                                    android:textColor="#333333"
                                    android:textSize="44px" />

                                <com.mcz.xhj.yz.dr_view.ExpandInSroll
                                    android:id="@+id/lv_produce"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:divider="@null"
                                    android:dividerHeight="1px"
                                    android:fillViewport="true"
                                    android:groupIndicator="@null"
                                    android:padding="56px" >
                                </com.mcz.xhj.yz.dr_view.ExpandInSroll>

                                <LinearLayout
                                    android:id="@+id/lv_creditor"
                                    android:layout_width="match_parent"
                                    android:layout_height="120px"
                                    android:background="#ffffff"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:visibility="gone" >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="56px"
                                        android:text="债权列表"
                                        android:textColor="#333333"
                                        android:textSize="40px" />

                                    <TextView
                                        android:id="@+id/tv_creditor_num"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="72px"
                                        android:layout_weight="1"
                                        android:text="选择红包"
                                        android:textColor="#666666"
                                        android:textSize="40px" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="56px"
                                        android:src="@mipmap/icon_rightto" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lv_detail_mid"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#F2F2F2"
                            android:orientation="vertical"
                            android:visibility="gone" >

                            <WebView
                                android:id="@+id/web_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#ffffff" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lv_detail_right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#F2F2F2"
                            android:orientation="vertical"
                            android:visibility="gone" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="96px"
                                android:background="#F2F2F2"
                                android:gravity="center"
                                android:orientation="vertical" >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal" >

                                    <LinearLayout
