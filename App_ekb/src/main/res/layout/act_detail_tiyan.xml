<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/immersion_status"
    android:id="@+id/ll_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/base_title_color"
    >

    <include layout="@layout/app_base_title" />
    <!--in.srain.cube.views.ptr.PtrClassicFrameLayout-->
    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        android:id="@+id/ptr_invest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2"
        android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/sv_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#f2f2f2"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:background="#ffffff"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="56px"
                            android:layout_marginTop="30px"
                            android:text="体验金专享"
                            android:textSize="48px"
                            android:textColor="#333333"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginTop="30px"
                            android:background="#f2f2f2" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="70px"
                            android:layout_weight="1"
                            android:layout_marginLeft="56px"
                            android:text="体验金服乐趣，享受投资收益"
                            android:textColor="#FF5111"
                            android:textSize="48px" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="88px"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="预期年化收益率"
                                    android:textSize="40px" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="24px"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/tv_rate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="3.6%"
                                        android:textColor="#FF5111"
                                        android:textSize="128px" />

                                    <TextView
                                        android:id="@+id/tv_h"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="+-%"
                                        android:visibility="gone"
                                        android:layout_alignParentTop="true"
                                        android:layout_toRightOf="@+id/tv_rate"
                                        android:textColor="#FF5111"
                                        android:textSize="52px" />
                                </RelativeLayout>


                            </LinearLayout>

                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#f2f2f2" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="投资期限"
                                    android:textSize="40px" />

                                <TextView
                                    android:id="@+id/tv_deadline"
                                    android:layout_marginTop="24px"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1天"
                                    android:textColor="#E45E3A"
                                    android:textSize="128px" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="70px"
                            android:layout_marginTop="40px"
                            android:gravity="center"
                            android:text="已有100人赚到了钱"
                            android:textSize="40px"
                            android:textColor="#333333"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:background="#ffffff"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="46px"
                            android:layout_marginLeft="66px"
                            android:text="计算收益："
                            android:textSize="44px"
                            android:textColor="#333333"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="70px"
                            android:layout_marginTop="70px"
                            android:visibility="gone"
                            android:src="@mipmap/tiyan_pic" />
                        <TextView
                            android:id="@+id/tv_lizi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24px"
                            android:layout_marginLeft="66px"
                            android:lineSpacingExtra="24px"
                            android:layout_marginRight="66px"
                            android:text="举个栗子：小明有88888元体验金，收益为3.6%。那么他的到期收益为88888*3.6%/360*1=8.88元 "
                            android:textSize="40px"
                            android:textColor="#333333"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="56px"
                            android:layout_marginTop="70px"
                            android:drawableLeft="@mipmap/tiyan_tips"
                            android:drawablePadding="10px"
                            android:text="体验标说明："
                            android:textSize="40px"
                            android:textColor="#333333"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60px"
                            android:layout_marginRight="60px"
                            android:layout_marginTop="20px"
                            android:lineSpacingExtra="20px"
                            android:text="@string/tiyantips"
                            android:textColor="#c2c2c2"
                            android:textSize="36px"

                            />
                        <TextView
                            android:id="@+id/tv_kefu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60px"
                            android:layout_marginRight="60px"
                            android:lineSpacingExtra="20px"
                            android:text="•如有疑问请拨打客服热线：400-819-8833；"
                            android:textColor="#c2c2c2"
                            android:textSize="36px"
                            android:layout_marginBottom="148px"
                            />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
            <TextView
                android:id="@+id/touzi_now"
                android:layout_width="match_parent"
                android:layout_height="128px"
                android:layout_alignParentBottom="true"
                android:background="@mipmap/bg_button"
                android:gravity="center"
                android:padding="0dp"
                android:text="立即投资"
                android:textColor="#ffffff"
                android:textSize="48px"
                android:visibility="visible"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_marginBottom="20px"
                android:layout_marginTop="20px"
                />
        </RelativeLayout>
    </in.srain.cube.views.ptr.PtrClassicFrameLayout>
</LinearLayout>