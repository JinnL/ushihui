<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="40px">

            <TextView
                android:id="@+id/tv_new_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/pro_new"
                android:drawablePadding="20px"
                android:text="新手体验"
                android:textColor="#333333"
                android:textSize="48px" />

            <TextView
                android:id="@+id/tv_new_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:layout_marginLeft="40px"
                android:background="@drawable/bg_corner_redline"
                android:padding="10px"
                android:text="限投一次"
                android:textColor="@color/base_red_color"
                android:textSize="32px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d2d2d2"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:layout_marginTop="40px"
            android:gravity="center_vertical"
            android:paddingLeft="40px"
            android:paddingRight="40px">


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_iphone"
                android:layout_width="218px"
                android:layout_height="218px"
                fresco:actualImageScaleType="fitCenter"
                fresco:failureImage="@mipmap/logo_default"
                fresco:failureImageScaleType="centerInside"
                fresco:placeholderImage="@mipmap/logo_default" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_rate_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/base_red_color"
                    android:textSize="92px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="30px"
                    android:text="%"
                    android:textColor="@color/base_red_color"
                    android:textSize="42px" />

                <TextView
                    android:id="@+id/tv_new_h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20px"
                    android:gravity="top"
                    android:text="+--%"
                    android:textColor="@color/base_red_color"
                    android:textSize="42px" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_deadline_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="88px"
                android:gravity="center"
                android:text="--天"
                android:textColor="#666666"
                android:textSize="74px" />

            <com.mcz.xhj.yz.dr_view.CircleProgressBar
                android:id="@+id/cpb_new"
                android:layout_width="218px"
                android:layout_height="218px"
                android:padding="6px"
                android:visibility="gone"
                android_custom:progress_background_color="@color/base_red_color"
                android_custom:progress_end_color="#d6d6d6"
                android_custom:progress_start_color="#d6d6d6"
                android_custom:progress_stroke_width="4dp"
                android_custom:progress_text_color="@color/base_red_color"
                android_custom:progress_text_format_pattern="去抢购"
                android_custom:progress_text_size="14sp"
                android_custom:stylel="solid_line" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ip7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24px"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="40px">

            <TextView
                android:id="@+id/tv_ip7_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="20px"
                android:ellipsize="end"
                android:lines="1"
                android:maxEms="13"
                android:text="送ip7"
                android:textColor="#333333"
                android:textSize="48px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d2d2d2"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40px"
            android:layout_marginTop="40px"
            android:gravity="center_vertical"
            android:paddingLeft="40px"
            android:paddingRight="40px">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_iphone7"
                android:layout_width="218px"
                android:layout_height="218px"
                android:layout_gravity="bottom"
                fresco:actualImageScaleType="fitCenter"
                fresco:failureImage="@mipmap/logo_default"
                fresco:failureImageScaleType="centerInside"
                fresco:placeholderImage="@mipmap/logo_default" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tv_ip7_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10px"
                        android:background="@drawable/bg_corner_redline_c"
                        android:padding="10px"
                        android:text="投资送iPhone7"
                        android:textColor="@color/base_red_color"
                        android:textSize="32px" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_rate_ip7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="@color/base_red_color"
                            android:textSize="92px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="30px"
                            android:text="%"
                            android:textColor="@color/base_red_color"
                            android:textSize="42px" />

                        <TextView
                            android:id="@+id/tv_ip7_h"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20px"
                            android:text="+--%"
                            android:textColor="@color/base_red_color"
                            android:textSize="48px" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_deadline_ip7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="88px"
                android:gravity="center"
                android:text="--天"
                android:textColor="#666666"
                android:textSize="74px" />

            <com.mcz.xhj.yz.dr_view.CircleProgressBar
                android:id="@+id/cpb_ip7"
                android:layout_width="218px"
                android:layout_height="218px"
                android:padding="6px"
                android:visibility="gone"
                android_custom:progress_background_color="@color/base_red_color"
                android_custom:progress_end_color="#d6d6d6"
                android_custom:progress_start_color="#d6d6d6"
                android_custom:progress_stroke_width="4dp"
                android_custom:progress_text_color="@color/base_red_color"
                android_custom:progress_text_size="14sp"
                android_custom:stylel="solid_line" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24px"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="40px">

            <TextView
                android:id="@+id/tv_send_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="20px"
                android:ellipsize="end"
                android:lines="1"
                android:maxEms="13"
                android:text="豪礼钜献专享标"
                android:textColor="#333333"
                android:textSize="48px" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d2d2d2"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40px"
            android:layout_marginTop="40px"
            android:gravity="center_vertical"
            android:paddingLeft="40px"
            android:paddingRight="40px">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_send"
                android:layout_width="218px"
                android:layout_height="218px"
                android:layout_gravity="bottom"
                fresco:actualImageScaleType="fitEnd"
                fresco:failureImage="@mipmap/logo_default"
                fresco:failureImageScaleType="centerInside"
                fresco:placeholderImage="@mipmap/logo_default" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_send_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10px"
                        android:background="@drawable/bg_corner_redline_c"
                        android:padding="10px"
                        android:text="0元尊享"
                        android:textColor="@color/base_red_color"
                        android:textSize="32px"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_rate_send"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="@color/base_red_color"
                            android:textSize="92px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="30px"
                            android:text="%"
                            android:textColor="@color/base_red_color"
                            android:textSize="42px" />

                        <TextView
                            android:id="@+id/tv_send_h"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="20px"
                            android:text="+--%"
                            android:textColor="@color/base_red_color"
                            android:textSize="48px" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_deadline_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="74px"
                android:text="--天"
                android:textColor="#666666"
                android:textSize="80px" />

            <com.mcz.xhj.yz.dr_view.CircleProgressBar
                android:id="@+id/cpb_send"
                android:layout_width="218px"
                android:layout_height="218px"
                android:padding="6px"
                android:visibility="gone"
                android_custom:progress_background_color="@color/base_red_color"
                android_custom:progress_end_color="#d6d6d6"
                android_custom:progress_start_color="#d6d6d6"
                android_custom:progress_stroke_width="4dp"
                android_custom:progress_text_color="@color/base_red_color"
                android_custom:progress_text_size="14sp"
                android_custom:stylel="solid_line" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24px"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="40px">

            <TextView
                android:id="@+id/tv_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/pro_youxuan"
                android:drawablePadding="20px"
                android:text="优选金服"
                android:textColor="#333333"
                android:textSize="48px" />

            <TextView
                android:id="@+id/tv_list_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:layout_marginLeft="40px"
                android:background="@drawable/bg_corner_redline"
                android:padding="10px"
                android:text="红包"
                android:textColor="@color/base_red_color"
                android:textSize="32px" />

            <TextView
                android:id="@+id/tv_list_jiaxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:layout_marginLeft="20px"
                android:background="@drawable/bg_corner_redline"
                android:padding="10px"
                android:text="加息券"
                android:textColor="@color/base_red_color"
                android:textSize="32px" />

            <TextView
                android:id="@+id/tv_list_fanbei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:layout_marginLeft="20px"
                android:background="@drawable/bg_corner_redline"
                android:padding="10px"
                android:text="翻倍券"
                android:textColor="@color/base_red_color"
                android:textSize="32px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d2d2d2"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="46px"
            android:layout_marginTop="46px"
            android:gravity="center_vertical"
            android:paddingLeft="40px"
            android:paddingRight="50px">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_list_rete_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/base_red_color"
                    android:textSize="92px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="30px"
                    android:text="%"
                    android:textColor="@color/base_red_color"
                    android:textSize="42px" />

                <TextView
                    android:id="@+id/tv_list_rete_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/base_red_color"
                    android:textSize="92px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="30px"
                    android:text="%"
                    android:textColor="@color/base_red_color"
                    android:textSize="42px" />

                <TextView
                    android:id="@+id/tv_deadline_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="--天"
                    android:textColor="#666666"
                    android:textSize="70px" />
            </LinearLayout>

            <com.mcz.xhj.yz.dr_view.CircleProgressBar
                android:id="@+id/cpb_list"
                android:layout_width="188px"
                android:layout_height="188px"
                android:padding="6px"
                android_custom:progress_background_color="#ff9593"
                android_custom:progress_end_color="#ff9593"
                android_custom:progress_start_color="#ff9593"
                android_custom:progress_stroke_width="3dp"
                android_custom:progress_text_color="#ff9593"
                android_custom:progress_text_format_pattern="去抢购"
                android_custom:progress_text_size="12sp"
                android_custom:stylel="solid_line" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>