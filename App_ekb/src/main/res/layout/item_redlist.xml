<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="330px"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="330px"
        android:background="@mipmap/redlist_item"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="244px"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥100"
                android:textColor="#ffffff"
                android:textSize="56px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未使用" 
                android:textColor="#ffffff"
                android:textSize="32px"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:orientation="vertical"
            android:paddingLeft="20px" >

            <LinearLayout
                android:id="@+id/tv_wenan3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_wenan1"
                android:layout_below="@+id/tv_wenan1"
                android:layout_marginTop="20px" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投资金额：单笔满"
                    android:textColor="@color/base_red_color"
                    android:textSize="32px" />

                <TextView
                    android:id="@+id/tv_wenan2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000"
                    android:textColor="@color/base_red_color"
                    android:textSize="32px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="@color/base_red_color"
                    android:textSize="32px" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_qixian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:text="000"
                android:textColor="@color/base_red_color"
                android:textSize="32px" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_dd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有效期至："
                    android:textColor="@color/base_red_color"
                    android:textSize="32px" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016.01.01 24:00"
                    android:textColor="@color/base_red_color"
                    android:textSize="32px" />
            </LinearLayout>
			<TextView
		        android:id="@+id/textView1"
		        android:layout_width="match_parent"
		        android:layout_marginRight="60px"
		        android:layout_height="10px"
		        android:layout_marginTop="10px"
		        android:layout_marginBottom="10px"
		        android:background="@drawable/xu_line_gray"
		        android:textColor="@color/base_red_color"
		        />
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:gravity="center"
			    >
            <TextView
                android:id="@+id/image_checked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即变现"
                android:textSize="40px"
                android:textColor="@color/base_red_color"
                android:background="@drawable/bg_corner_redline"
                android:paddingLeft="80px"
                android:paddingRight="80px"
                android:paddingTop="10px"
               	android:paddingBottom="10px"
               	android:layout_marginRight="50px"
                />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>