<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/immersion_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f1f1f1">
    <include layout="@layout/app_base_title" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36px"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="56px"
        android:paddingRight="56px">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="130px"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="48px"
                android:text="推送消息设置"
                android:textColor="#666666"
                android:layout_weight="1"
                />

            <ImageView
                android:id="@+id/iv_kaiguan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d1d1d1"/>

        <LinearLayout
            android:id="@+id/rl_clear_huancun"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="130px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="48px"
                android:text="清除本地缓存"
                android:textColor="#666666"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/tv_huancun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:layout_alignParentRight="true"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d1d1d1"/>

        <LinearLayout
            android:id="@+id/rl_genxinbanben"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="130px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="48px"
                android:text="更新版本"
                android:textColor="#666666"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/tv_banben"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:layout_alignParentRight="true"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/btn_exit"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_marginLeft="56px"
        android:layout_marginRight="56px"
        android:text="退出登录"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="48px"
        android:layout_marginTop="128px"
        android:background="@drawable/bg_btn_corner"
        />
</LinearLayout>
