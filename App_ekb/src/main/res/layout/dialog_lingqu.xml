<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="833px"
        android:layout_height="1272px"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/lingqu" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="434px"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="领取了奖金"
            android:textColor="#ffffff"
            android:textSize="90px" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500元"
            android:textColor="#ffffff"
            android:textSize="90px" 
            android:layout_marginTop="40px"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:text="奖金已转入您的账户请及时查收"
            android:textColor="#ffffff"
            android:textSize="36px" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="493px"
            android:layout_height="130px"
            android:layout_marginTop="50px"
            android:text="分享赚更多"
            android:textColor="@color/base_title_color"
            android:textSize="50px" 
            android:gravity="center"
            android:background="@drawable/bg_corner_yell"
            />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="493px"
            android:layout_height="130px"
            android:layout_marginTop="60px"
            android:text="放弃机会"
            android:textColor="#ffffff"
            android:textSize="50px" 
            android:background="@drawable/bg_corner_red_white"
            android:gravity="center"
            />
    </LinearLayout>

</RelativeLayout>