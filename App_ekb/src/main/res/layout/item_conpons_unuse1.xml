<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@null"
        android:paddingBottom="18px"
        >

        <LinearLayout
            android:id="@+id/ll_conpons_bg"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@mipmap/conpons_off"
            >

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="#ffffff"
                android:textSize="88px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返现红包"
                android:textColor="#ffffff"
                android:textSize="40px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:paddingLeft="20px"
            android:background="#ffffff"
            android:layout_marginBottom="6px"
            android:layout_marginTop="4px"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/tv_wenan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView3"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="20px"
                android:text="红包来源"
                android:textColor="#333333"
                android:textSize="44px" />

            <TextView
                android:id="@+id/tv_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:text="单笔投资满"
                android:textColor="#a0a0a0"
                android:textSize="36px" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_marginRight="60px"
                android:layout_height="10px"
                android:layout_marginTop="20px"
                android:background="@drawable/xu_line_gray"
                android:textColor="@color/base_title_color"
                android:layerType="software"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_dd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有效期至："
                    android:textColor="#a0a0a0"
                    android:textSize="36px" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2016.01.01 24:00"
                    android:textColor="#a0a0a0"
                    android:textSize="36px" />

                <ImageView
                    android:id="@+id/image_checked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40px"
                    android:src="@mipmap/icon_selected"
                    android:visibility="gone"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/cover_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        />

    <ImageView
        android:id="@+id/tv_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/conpons_tab"
        android:layout_gravity="right"
        android:visibility="gone"
        />
</FrameLayout>
