<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/base_title_color"
    style="@style/immersion_status"
    >
	
    <include layout="@layout/app_base_title" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#f2f2f2"
        />
    <LinearLayout 
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" 
	    android:background="#ffffff"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="138px"
                android:background="#ffffff"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_bank"
                    android:layout_width="300px"
                    android:layout_height="100px"
                    android:layout_marginLeft="56px" />

                <TextView
                    android:id="@+id/tv_banknum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="56px"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="--"
                    android:textColor="#696969"
                    android:textSize="48px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d2d2d2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="138px"
                android:background="#ffffff"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="56px"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:text="姓名"
                    android:textColor="#a0a0a0"
                    android:textSize="48px"></TextView>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="56px"
                    android:text="--"
                    android:textColor="#696969"
                    android:textSize="48px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="40px"
                android:background="#d2d2d2" />

          <!--  <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="56px"
                android:background="#d2d2d2" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="138px"
                android:background="#ffffff"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="56px"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:text="身份证号"
                    android:textColor="#a0a0a0"
                    android:textSize="48px"></TextView>

                <TextView
                    android:id="@+id/tv_idcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="56px"
                    android:text="--"
                    android:textColor="#696969"
                    android:textSize="48px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="40px"
                android:background="#d2d2d2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="138px"
                android:background="#ffffff"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="56px"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:text="预留手机号"
                    android:textColor="#a0a0a0"
                    android:textSize="48px"></TextView>

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="56px"
                    android:text="--"
                    android:textColor="#696969"
                    android:textSize="48px" />
            </LinearLayout>

           <!-- <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d2d2d2" />-->

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d2d2d2" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56px"
                android:layout_marginTop="144px"
                android:drawableLeft="@mipmap/ico_bulb"
                android:text="友情提示"
                android:textColor="#444444"
                android:textSize="40px" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="72px"
                android:layout_marginTop="48px"
                android:text="●  此银行卡为您的充值和取现银行卡，同卡进出不可更改"
                android:textColor="#a0a0a0"
                android:textSize="32px" />

            <TextView
                android:id="@+id/tv_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="72px"
                android:layout_marginTop="48px"
                android:text="●  "
                android:textColor="#a0a0a0"
                android:textSize="32px" />

            <TextView
                android:id="@+id/tv_limitday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="72px"
                android:layout_marginTop="48px"
                android:text="●  "
                android:textColor="#a0a0a0"
                android:textSize="32px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="72px"
                android:layout_marginTop="48px"
                android:text="●  银行提现单笔限额为500,000元"
                android:textColor="#a0a0a0"
                android:textSize="32px" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>