<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/immersion_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <include layout="@layout/app_base_title" />




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:background="#ffffff"
                android:drawableLeft="@mipmap/pro_detail_tvleft"
                android:drawablePadding="20px"
                android:lineSpacingMultiplier="1.5"
                android:padding="40px"
                android:text="产品描述"
                android:textColor="#666666"
                android:textSize="40px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="20px"
                android:paddingTop="20px">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70px"
                    android:src="@mipmap/pro_new1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="30px"
                        android:text="针对人群"
                        android:textColor="@color/base_red_color"
                        android:textSize="36px" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="30px"
                        android:text="针对在聚胜财富注册的新用户"
                        android:textColor="#666666"
                        android:textSize="34px" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="20px"
                android:paddingTop="20px">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70px"
                    android:src="@mipmap/pro_new2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="30px"
                        android:text="产品特点"
                        android:textColor="@color/base_red_color"
                        android:textSize="36px" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="30px"
                        android:text="周期短、收益高续投还可领大红包！"
                        android:textColor="#666666"
                        android:textSize="34px" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="40px"
                android:paddingTop="20px">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70px"
                    android:src="@mipmap/pro_new3" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="30px"
                        android:text="参与规则"
                        android:textColor="@color/base_red_color"
                        android:textSize="36px" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="30px"
                        android:text="起投金额100元，仅能购买1次"
                        android:textColor="#666666"
                        android:textSize="34px" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:background="#ffffff"
                android:drawableLeft="@mipmap/pro_detail_tvleft"
                android:drawablePadding="20px"
                android:lineSpacingMultiplier="1.5"
                android:padding="40px"
                android:text="回款方式"
                android:textColor="#666666"
                android:textSize="40px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:paddingTop="20px">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70px"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="40px"
                        android:layout_height="40px"
                        android:background="@drawable/bg_corner_red_yuan_kong"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#ffffff" />

                    <View
                        android:layout_width="2px"
                        android:layout_height="150px"
                        android:background="@color/base_red_color"></View>

                    <TextView
                        android:layout_width="40px"
                        android:layout_height="40px"
                        android:background="@drawable/bg_corner_red_yuan_kong"
                        android:gravity="center"
                        android:textColor="#ffffff" />

                    <View
                        android:layout_width="2px"
                        android:layout_height="150px"
                        android:background="@color/base_red_color"></View>

                    <TextView
                        android:id="@+id/tv_three"
                        android:layout_width="40px"
                        android:layout_height="40px"
                        android:background="@drawable/bg_corner_red_yuan_kong"
                        android:gravity="center"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="56px"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="到期"
                        android:textColor="@color/base_red_color"
                        android:textSize="36px" />

                    <TextView
                        android:id="@+id/tv_timeone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="新手标1天到期"
                        android:textColor="#666666"
                        android:textSize="34px" />

                    <TextView
                        android:id="@+id/tv_time_titletwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="100px"
                        android:text="到期后"
                        android:textColor="@color/base_red_color"
                        android:textSize="36px" />

                    <TextView
                        android:id="@+id/tv_timetwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本金+收益返回到个人账户"
                        android:textColor="#666666"
                        android:textSize="34px" />

                    <TextView
                        android:id="@+id/tv_titlethree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="100px"
                        android:text="提现"
                        android:textColor="@color/base_red_color"
                        android:textSize="36px" />

                    <TextView
                        android:id="@+id/tv_timethree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="可随时随地提现、再投资"
                        android:textColor="#666666"
                        android:textSize="34px" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:paddingBottom="40px"
                android:paddingLeft="70px"
                android:paddingTop="50px"
                android:text="*注：选择续投的用户1天后只返还收益，本金续投；\n          就现金红包投资成功后即可到账提现。"
                android:textColor="@color/base_red_color"
                android:textSize="32px" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:background="#ffffff"
                android:drawableLeft="@mipmap/pro_detail_tvleft"
                android:drawablePadding="20px"
                android:lineSpacingMultiplier="1.5"
                android:padding="40px"
                android:text="收益计算"
                android:textColor="#666666"
                android:textSize="40px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:paddingBottom="60px"
                android:paddingTop="40px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170px"
                    android:text="*投资100000元，1天最大收益对比(元)"
                    android:textColor="@color/base_red_color"
                    android:textSize="36px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170px"
                    android:layout_marginTop="40px"
                    android:src="@mipmap/pro_new4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170px"
                    android:layout_marginTop="50px"
                    android:text="以100000元举例:"
                    android:textColor="#666666"
                    android:textSize="36px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170px"
                    android:text="12%+13%收益，1天后就到手！收益多赚35.4元"
                    android:textColor="#666666"
                    android:textSize="36px" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:background="#ffffff"
                android:drawableLeft="@mipmap/pro_detail_tvleft"
                android:drawablePadding="20px"
                android:lineSpacingMultiplier="1.5"
                android:padding="40px"
                android:text="资金安全"
                android:textColor="#666666"
                android:textSize="40px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="20px"
                android:paddingTop="20px">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70px"
                    android:src="@mipmap/pro_new5" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="30px"
                        android:text="针对人群"
                        android:textColor="@color/base_red_color"
                        android:textSize="36px" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="30px"
                        android:text="针对在聚胜财富注册的新用户"
                        android:textColor="#666666"
                        android:textSize="34px" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="20px"
                android:paddingTop="20px">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70px"
                    android:src="@mipmap/pro_new6" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="30px"
                        android:text="产品特点"
                        android:textColor="@color/base_red_color"
                        android:textSize="36px" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="30px"
                        android:text="周期短、收益高续投还可领大红包！"
                        android:textColor="#666666"
                        android:textSize="34px" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60px"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="40px"
                android:paddingTop="20px">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70px"
                    android:src="@mipmap/pro_new7" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="30px"
                        android:text="参与规则"
                        android:textColor="@color/base_red_color"
                        android:textSize="36px" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="30px"
                        android:text="起投金额100元，仅能购买1次"
                        android:textColor="#666666"
                        android:textSize="34px" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
