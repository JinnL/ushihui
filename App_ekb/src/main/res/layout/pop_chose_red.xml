<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#b5555555"
    android:gravity="bottom"
    >
   <!--android:background="#b5555555"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认支付"
                android:layout_weight="1"
                android:layout_marginLeft="56px"
                android:padding="38px"
                android:gravity="center"
                android:textSize="52px"
                android:textColor="#606060"
                />
            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="36px"
                android:layout_height="36px"
                android:src="@mipmap/xutou_close"
                android:layout_marginRight="56px"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#f2f2f2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="36px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#606060"
                android:text="使用体验金支付，共计"
                android:textSize="52px" />
            <TextView
                android:id="@+id/tv_yiyan_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF5111"
                android:text="15888"
                android:textSize="52px" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#606060"
                android:text="元"
                android:textSize="52px" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36px"
            android:layout_gravity="center_horizontal"
            android:text=" 体验金不可与其他优惠同时使用，支付后扣除"
            android:drawableLeft="@mipmap/me_jinggao"/>

        <TextView
            android:id="@+id/tv_queren"
            android:layout_width="match_parent"
            android:layout_height="140px"
            android:layout_marginLeft="56px"
            android:layout_marginRight="56px"
            android:background="@mipmap/bg_button"
            android:text="去支付"
            android:gravity="center"
            android:textSize="56px"
            android:layout_marginTop="30px"
            android:textColor="#ffffff"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>

</LinearLayout>