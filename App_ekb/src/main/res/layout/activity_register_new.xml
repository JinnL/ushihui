<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/immersion_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_title_register"
        android:layout_width="match_parent"
        android:layout_height="34dp">

        <ImageView
            android:id="@+id/img_close_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/close_login" />

        <TextView
            android:id="@+id/tv_title_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:text="注册"
            android:textColor="@color/textColor3"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_welcome_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="68dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_day_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="*"
                android:textColor="@color/textColor3"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/tv_week_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="星期*"
                android:textColor="@color/textColor3"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="58dp"
            android:layout_marginTop="8dp"
            android:background="#FFAFB0B7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:padding="5dp"
            android:text="你好\n欢迎加入"
            android:textColor="@color/textColor3"
            android:textSize="24sp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_welcome_register"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_phonenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="手机号"
            android:inputType="number"
            android:maxLength="11"
            android:paddingBottom="22dp"
            android:paddingLeft="15dp"
            android:paddingTop="12dp"
            android:textColor="@color/textColor3"
            android:textColorHint="@color/textColorMinor"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/et_login_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="登录密码(6-18位字母、数字组合)"
            android:inputType="textPassword"
            android:maxLength="18"
            android:paddingBottom="22dp"
            android:paddingLeft="15dp"
            android:paddingTop="12dp"
            android:textColor="@color/textColor3"
            android:textColorHint="@color/textColorMinor"
            android:textSize="14sp" />


        <RelativeLayout
            android:id="@+id/rl_yzm_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <EditText
                android:id="@+id/et_register_yzm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="短信验证码"
                android:maxLength="4"
                android:singleLine="true"
                android:paddingBottom="22dp"
                android:paddingLeft="15dp"
                android:paddingTop="12dp"
                android:textColor="@color/textColor3"
                android:textColorHint="@color/textColorMinor"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_getyzm"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/bg_corner_kong_blue"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@drawable/textcolor_msg"
                android:textSize="14sp"
                android:visibility="visible"></TextView>

        </RelativeLayout>

        <EditText
            android:id="@+id/et_inviteCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="推荐人手机号(邀请码)(选填)"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:maxLength="11"
            android:paddingBottom="22dp"
            android:paddingLeft="15dp"
            android:paddingTop="12dp"
            android:textColor="@color/textColor3"
            android:textColorHint="@color/textColorMinor"
            android:textSize="14sp"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/rl_agreement_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="34dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tv_agreement_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="注册即代表同意用户协议"
                android:textColor="#53AFFF"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/select_bt_l_red"
                android:gravity="center"
                android:text="领取新手奖励"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">

            <TextView
                android:id="@+id/tv_inviteCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableRight="@mipmap/arrow_down_reg"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="邀请码"
                android:textColor="@color/textColorMinor"
                android:textSize="14sp" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_user_protocol"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:text="用户协议 |"
                android:textSize="14sp"
                android:textColor="@color/textColorMinor"/>


            <TextView
                android:id="@+id/tv_toLogin"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="已有账号,去登录"
                android:textSize="14sp"
                android:textColor="#20A3F9"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>