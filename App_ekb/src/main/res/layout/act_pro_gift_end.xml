<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/immersion_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_title_color"
    android:orientation="vertical">

    <!-- title -->

    <include layout="@layout/app_base_title" />
    <!-- webview -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">

                    <com.mcz.xhj.yz.dr_view.DrawHookView
                        android:layout_width="128px"
                        android:layout_height="128px"
                        android:layout_gravity="center"
                        android:layout_marginTop="40px" />

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16px"
                        android:text="投资成功"
                        android:textColor="#333333"
                        android:textSize="48px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="40px"
                    android:visibility="gone"
                    >

                    <ImageView
                        android:layout_width="128px"
                        android:layout_height="128px"
                        android:layout_gravity="center"
                        android:layout_marginTop="40px"
                        android:src="@mipmap/redbag"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16px"
                        android:text="您有1次拆红包机会"
                        android:textColor="@color/base_title_color"
                        android:textSize="32px"
                        />
                </LinearLayout>
            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:layout_marginTop="80px"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:gravity="center"
                    >

                    <LinearLayout
                        android:id="@+id/ll_gift"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="40px"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="礼品信息"
                            android:textColor="#999999"
                            android:textSize="40px" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_gift"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="#333333"
                            android:textSize="40px"
                            android:drawableRight="@mipmap/icon_rightto"
                            android:drawablePadding="10px"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#d2d2d2"
                        android:layout_marginLeft="40px"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="40px"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="投资项目"
                            android:textColor="#999999"
                            android:textSize="40px" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="#333333"
                            android:textSize="40px" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#d2d2d2"
                        android:layout_marginLeft="40px"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="40px"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="投资期限"
                            android:textColor="#999999"
                            android:textSize="40px" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="#333333"
                            android:textSize="40px" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#d2d2d2"
                        android:layout_marginLeft="40px"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="40px"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="回款日期"
                            android:textColor="#999999"
                            android:textSize="40px" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="#333333"
                            android:textSize="40px" />
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#d2d2d2"
                        android:layout_marginLeft="40px"
                        />
                    <LinearLayout
                        android:id="@+id/ll_used_hongbao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="40px"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="到期本息"
                            android:textColor="#999999"
                            android:textSize="40px" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_earn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="#333333"
                            android:textSize="40px" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#d2d2d2"
                        android:layout_marginLeft="40px"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="120px"
                        >
                        <TextView
                            android:id="@+id/tv_gouser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_corner_redline"
                            android:text="查看我的投资"
                            android:paddingLeft="30px"
                            android:paddingRight="30px"
                            android:paddingTop="30px"
                            android:paddingBottom="30px"
                            android:textSize="46px"
                            />
                        <TextView
                            android:id="@+id/tv_goinvest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_corner_whiteline_red"
                            android:text="更多精选"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="80px"
                            android:paddingLeft="80px"
                            android:paddingRight="80px"
                            android:paddingTop="30px"
                            android:paddingBottom="30px"
                            android:textSize="46px"
                            />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="56px"
                android:layout_marginTop="30px"
                android:background="#E7E7E7" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="84px"
                    android:background="#ffffff" />

                <com.mcz.xhj.yz.dr_view.TileTextview
                    android:id="@+id/tv_noe"
                    android:layout_width="334px"
                    android:layout_height="170px"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="80px"
                    android:background="@mipmap/box_red"
                    android:gravity="center"
                    android:text="仅有一次机会"
                    android:textColor="@color/base_title_color"
                    android:textSize="48px"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20px"
                    android:text="好消息！您获得了一次额外福利"
                    android:textSize="40px"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_xutou"
                    android:layout_width="match_parent"
                    android:layout_height="112px"
                    android:layout_below="@+id/tv_empty"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="56px"
                    android:layout_marginRight="56px"
                    android:layout_marginTop="30px"
                    android:background="@drawable/bg_btn_corner"
                    android:gravity="center"
                    android:text="续投领取现金红包"
                    android:textColor="#ffffff"
                    android:textSize="48px"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_giveup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_xutou"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="40px"
                    android:layout_marginTop="50px"
                    android:text="放弃机会"
                    android:textColor="@color/base_title_color"
                    android:textSize="48px"
                    android:visibility="gone" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>