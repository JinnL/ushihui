<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/shape_rectangle_gray"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_rank_number"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="*"
        android:textColor="#FF283A6F"
        android:textSize="15sp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/shape_circle_gray"
        android:padding="2dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/avatar_default2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="***"
            android:textColor="@color/text1"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_jifen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分：***"
            android:textColor="@color/textred"
            android:textSize="14sp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="22dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_award"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_alignParentRight="true"
            android:text="***"
            android:textColor="@color/text1"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_value"
            android:layout_below="@+id/tv_award"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="价值***元"
            android:textColor="@color/text76"
            android:textSize="13sp"/>

    </RelativeLayout>

</LinearLayout>