<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <View
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#f2f2f2" />

    <include
        android:id="@+id/title"
        layout="@layout/app_base_title" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="#d2d2d2"></View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/find_titleBanner"
                android:layout_width="match_parent"
                android:layout_height="141dp"
                android:src="@mipmap/find_banner"></ImageView>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:background="#d2d2d2"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36px"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/ll_yaoqing"
                    android:layout_width="0dp"
                    android:layout_height="300px"
                    android:layout_weight="1"
                    android:background="@drawable/bg_ll_person"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_yaoqing"
                        android:layout_width="108px"
                        android:layout_height="108px"

                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/find_yaoqing" />

                    <TextView
                        android:id="@+id/tx_yaoqing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_yaoqing"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"

                        android:text="邀请好友"
                        android:textColor="#666666"
                        android:textSize="42px" />
                </RelativeLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#d2d2d2" />

                <RelativeLayout
                    android:id="@+id/ll_huodong"
                    android:layout_width="0dp"
                    android:layout_height="300px"
                    android:layout_weight="1"
                    android:background="@drawable/bg_ll_person"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_huodong"
                        android:layout_width="108px"
                        android:layout_height="108px"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/find_huodong" />

                    <TextView
                        android:id="@+id/tv_huodong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_huodong"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:text="活动中心"
                        android:textColor="#666666"
                        android:textSize="42px" />
                </RelativeLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#d2d2d2" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d2d2d2" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/ll_kefu"
                    android:layout_width="0dp"
                    android:layout_height="300px"
                    android:layout_weight="1"
                    android:background="@drawable/bg_ll_person"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_kefu"
                        android:layout_width="108px"
                        android:layout_height="108px"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/find_kefu" />

                    <TextView
                        android:id="@+id/tv_kefu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_kefu"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:text="客服中心"
                        android:textColor="#666666"
                        android:textSize="42px" />
                </RelativeLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#d2d2d2" />

                <RelativeLayout
                    android:id="@+id/ll_guanyu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_ll_person"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_guanyu"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:text="关于小行家"
                        android:textColor="#666666"
                        android:textSize="42px" />

                    <ImageView
                        android:id="@+id/img_guanyu"
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/find_guanyu" />

                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d2d2d2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/ll_guanwang"
                    android:layout_width="0dp"
                    android:layout_height="300px"
                    android:layout_weight="1"
                    android:background="@drawable/bg_ll_person"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_guanwang"
                        android:layout_width="108px"
                        android:layout_height="108px"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/find_guanwang" />

                    <TextView
                        android:id="@+id/tv_guanwang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_guanwang"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:text="官方网站"
                        android:textColor="#666666"
                        android:textSize="42px" />
                </RelativeLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#d2d2d2" />

                <RelativeLayout
                    android:id="@+id/Lin_gongzhonghao"
                    android:layout_width="0dp"
                    android:layout_height="300px"
                    android:layout_weight="1"
                    android:background="@drawable/bg_ll_person"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_gongzhonghao"
                        android:layout_width="108px"
                        android:layout_height="108px"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/find_guanwei" />

                    <TextView
                        android:id="@+id/tv_gongzhonghao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_gongzhonghao"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:text="小行家官微"
                        android:textColor="#666666"
                        android:textSize="42px" />
                </RelativeLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d2d2d2" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>