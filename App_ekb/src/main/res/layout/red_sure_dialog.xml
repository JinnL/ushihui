<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="269.33dip"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle_white"
        android:orientation="vertical"
        >
        <!--  android:background="@drawable/alert_bg"-->
        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="68px"
            android:text="确认预约"
            android:textColor="@android:color/black"
            android:textSize="56px"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="56px"
            android:paddingLeft="56px"
            android:paddingRight="56px"
            android:text="您的专属客服会在两个工作日内联系您"
            android:textColor="#646464"
            android:textSize="48px"
            android:visibility="visible" />


        <View
            android:layout_width="match_parent"
            android:layout_marginTop="88px"
            android:layout_height="1px"
            android:background="#d2d2d2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="138px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cacel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="#646464"
                android:textSize="56px" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#d2d2d2" />
            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="确认"
                android:gravity="center"
                android:textColor="#E43F3E"
                android:textSize="56px" />
        </LinearLayout>

        <!-- button pannel -->
        <!-- <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#b2b2b2" /> -->
    </LinearLayout>
</LinearLayout>