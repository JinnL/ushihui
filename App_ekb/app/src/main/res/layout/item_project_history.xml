<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/dp_15">


    <TextView
        android:id="@+id/tv_title"
        style="@style/layout_wrap"
        android:layout_marginLeft="@dimen/dp_12"
        android:textColor="@color/text_99"
        android:textSize="15sp"
        tools:text="新人专享No.237" />

    <TextView
        android:id="@+id/tv_reward"
        style="@style/layout_wrap"
        android:layout_alignBaseline="@+id/tv_title"
        android:layout_marginLeft="10px"
        android:layout_toRightOf="@+id/tv_title"
        android:background="@drawable/shape_rectangle_empty_line"
        android:text="限额5万元"
        android:textColor="@color/text_99"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_interest"
        style="@style/layout_wrap"
        android:layout_below="@+id/tv_title"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="44px"
        android:textColor="@color/text_99"
        android:textSize="24sp"
        tools:text="7.2+3.6%" />

    <TextView
        android:id="@+id/tv_time"
        style="@style/layout_wrap"
        android:layout_alignBaseline="@+id/tv_interest"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_99"
        android:textSize="12sp"
        tools:text="60天" />


    <TextView
        android:id="@+id/tv_month"
        style="@style/layout_wrap"
        android:layout_below="@+id/tv_interest"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="42px"
        android:text="近3个月年化收益"
        android:textColor="@color/text_99"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_limit"
        style="@style/layout_wrap"
        android:layout_below="@+id/tv_interest"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42px"
        android:text="出借期限"
        android:textColor="@color/text_99"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_status"
        style="@style/layout_wrap"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_13"
        android:textColor="@color/text_99"
        android:textSize="@dimen/sp_17"
        tools:text="计息中" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_below="@+id/tv_month"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/line_ee" />


</RelativeLayout>