<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_12"
    android:layout_marginRight="@dimen/dp_12"
    android:background="@drawable/bg_oil_card_3"
    android:clickable="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_27"
        android:layout_marginTop="@dimen/dp_25"
        android:drawableLeft="@drawable/icon_title_oilcard"
        android:drawablePadding="@dimen/dp_9"
        android:text="油卡"
        android:textColor="@color/text_black"

        android:textSize="@dimen/sp_18" />

    <TextView
        android:id="@+id/tv_card_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_27"
        android:layout_marginTop="@dimen/dp_23"
        android:text="0000 0000 0000 0000 000"
        android:textColor="#ADB1B8"
        android:textSize="@dimen/sp_19" />

    <LinearLayout
        android:id="@+id/ll_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            style="@style/layout_width_0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_16">

            <TextView
                android:id="@+id/tv_money1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/primary"
                android:textSize="@dimen/sp_18"
                tools:text="￥800.00" />

            <TextView
                android:id="@+id/tv_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/dp_6"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/sp_12"
                tools:text="最新充值(2018.11.12)" />


        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="@dimen/dp_0_5"
            android:layout_height="@dimen/dp_24"
            android:layout_gravity="center_vertical"
            android:background="@color/line_ee"
            android:visibility="gone" />

        <LinearLayout
            style="@style/layout_width_0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_22">

            <TextView
                android:id="@+id/tv_money2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_18"
                tools:text="￥800.00" />

            <TextView
                android:id="@+id/tv_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/dp_6"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/sp_12"
                tools:text="下次充值(2018.12.12)" />


        </LinearLayout>


    </LinearLayout>

    <ImageButton
        android:id="@+id/bt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_33"
        android:background="@null"
        android:src="@drawable/icon_person_add"
        android:visibility="gone" />

</LinearLayout>