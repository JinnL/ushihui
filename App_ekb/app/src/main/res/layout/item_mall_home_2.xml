<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5"
    app:cardCornerRadius="@dimen/dp_5"
    app:cardElevation="@dimen/dp_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            style="@style/margin_left_right"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_221">

            <ImageView
                android:id="@+id/iv_goods"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_144"
                android:layout_margin="@dimen/dp_9"
                android:background="@drawable/shape_rectangle_white_4"
                android:scaleType="fitXY"
                tools:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_goods"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_13"
                tools:text="德国德朗士 多功能加热破壁机家用料理热破壁机家" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_12"
                android:textColor="@color/bt"
                android:textSize="@dimen/sp_13"
                tools:text="￥17258.00" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_12"
                android:maxLines="1"
                android:textColor="@color/text_bb"
                android:textSize="@dimen/sp_10"
                tools:text="￥26622.00" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>