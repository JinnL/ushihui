<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp_75"
    android:layout_marginLeft="@dimen/dp_3"
    android:layout_marginRight="@dimen/dp_3"
    android:layout_marginBottom="@dimen/dp_3"
    android:background="@drawable/bg_hot_package">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_package"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75">

        <TextView
            android:id="@+id/tv_discount"
            android:layout_width="@dimen/dp_0"
            app:layout_constraintHorizontal_weight="2"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#FC4343"
            android:textSize="@dimen/sp_30"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_discount_title"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="7.0" />

        <TextView
            android:id="@+id/tv_discount_title"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:text="折"
            android:layout_marginBottom="@dimen/dp_5"
            app:layout_constraintHorizontal_weight="1"
            android:textColor="#ff3b3b3b"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_discount"
            app:layout_constraintLeft_toRightOf="@id/tv_discount"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tv_deadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_11"
            app:layout_constraintTop_toBottomOf="@id/tv_discount"
            tools:text="例500元/月｜24个月" />

        <TextView
            android:id="@+id/tv_decrease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp_2"
            tools:text="立省3600元"
            android:textColor="@color/white"
            android:background="@drawable/bg_hot_package_bottom"
            android:textSize="@dimen/dp_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </android.support.constraint.ConstraintLayout>


</RelativeLayout>