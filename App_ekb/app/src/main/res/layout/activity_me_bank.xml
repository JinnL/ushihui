<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical">

    <include layout="@layout/app_base_title" />


    <RelativeLayout
        android:id="@+id/rl_bank"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_140"
        android:layout_marginTop="@dimen/dp_30"
        tools:background="@drawable/bg_gongshang">

        <ImageView
            android:id="@+id/iv_bank"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_27"
            android:layout_marginTop="@dimen/dp_26"
            tools:src="@drawable/bank_gongshang" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_bank"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_toRightOf="@+id/iv_bank"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                tools:text="中国银行" />

            <TextView
                android:id="@+id/tv_bank_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                tools:text="中国银行" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_33"
            android:layout_marginTop="@dimen/dp_30"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            tools:text="单笔5万元" />

        <TextView
            android:id="@+id/tv_limit_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_limit"
            android:layout_marginRight="@dimen/dp_33"
            android:layout_marginTop="@dimen/dp_3"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            tools:text="单日10万元" />

        <TextView
            android:id="@+id/tv_bank_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_62"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_24"
            tools:text="**** **** **** 1112" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:text="温馨提示："
            android:textColor="@color/text_99"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="1.此银行卡用于您充值和提现"
            android:textColor="@color/text_99"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="2.为保障资金安全，银行卡不可更改绑定"
            android:textColor="@color/text_99"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

</LinearLayout>