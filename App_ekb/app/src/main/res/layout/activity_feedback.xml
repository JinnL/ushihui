<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ekabao.oil.ui.activity.me.FeedbackActivity">

    <include layout="@layout/app_base_title" />

    <EditText
        android:id="@+id/et_enter"
        style="@style/margin_left_right"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_250"

        android:layout_marginTop="@dimen/dp_14"
        android:background="@drawable/shape_rectangle_white_10"
        android:gravity="top|start"
        android:hint="写下你的宝贵意见或要求,我们将以最快的速度进行处理"
        android:inputType="textMultiLine"
        android:maxLength="200"
        android:paddingBottom="@dimen/dp_3"
        android:paddingLeft="@dimen/dp_7"
        android:paddingRight="@dimen/dp_7"
        android:paddingTop="@dimen/dp_14"
        android:textColor="@color/text1"
        android:textColorHint="@color/text_99"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_num"
        style="@style/margin_left_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="right"
        android:text="0/200"
        android:textColor="@color/text_99"
        android:textSize="12sp" />


    <Button
        android:id="@+id/bt_add"
        style="@style/bt_large_match"
        android:text="提交"
        android:background="@drawable/shape_rectangle_red_88px"
        android:layout_marginTop="@dimen/dp_15"
        />


</LinearLayout>
