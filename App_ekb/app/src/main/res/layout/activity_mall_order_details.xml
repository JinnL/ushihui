<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.ekabao.oil.ui.activity.me.MallOrderDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_mall_order_details_2"
                android:fitsSystemWindows="true">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:src="@drawable/fanhui_white" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="订单详情"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_express"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_77"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_19"
                android:paddingRight="@dimen/dp_14"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:drawableLeft="@drawable/icon_kuaidi"
                    android:drawablePadding="@dimen/dp_7"
                    android:text="快递信息"
                    android:textColor="@color/text_99"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_express"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:text="快递信息"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_14"
                    tools:text="顺丰快递   023221407143" />

                <Button
                    android:id="@+id/bt_copy"
                    android:layout_width="@dimen/dp_72"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_rectangle_empty_line_primary_11"
                    android:text="复制单号"
                    android:textColor="@color/primary" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:background="@color/white"
                android:padding="@dimen/dp_15">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_address" />

                <TextView
                    android:id="@+id/tv_address_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_28"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_15"
                    tools:text="张三 12489999291"

                    />

                <TextView
                    android:id="@+id/tv_address_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_28"
                    android:textColor="@color/text_99"
                    android:textSize="@dimen/sp_12"
                    tools:text="杭州市江干区钱江时代国际广场2号楼1706"

                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_96"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:padding="@dimen/dp_15">

                <ImageView
                    android:id="@+id/iv_goods"
                    android:layout_width="@dimen/dp_66"
                    android:layout_height="@dimen/dp_66"
                    android:layout_centerVertical="true" />


                <TextView
                    android:id="@+id/tv_goods_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_78"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_13"
                    tools:text="德国德朗士 多功能加热破壁机家用料理机新多功能加热破壁机家" />

                <TextView
                    android:id="@+id/tv_specification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_goods_name"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toRightOf="@+id/iv_goods"
                    android:textColor="@color/text_99"
                    android:textSize="@dimen/sp_11"
                    tools:text="高配版" />


                <TextView
                    android:id="@+id/tv_goods_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_12"
                    tools:text="x1" />

                <TextView
                    android:id="@+id/tv_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_toLeftOf="@+id/tv_goods_num"
                    android:maxLines="2"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/sp_15"
                    tools:text="￥372.00" />
            </RelativeLayout>

            <include layout="@layout/line_color_ee" />

            <LinearLayout
                style="@style/padding_left_right"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="专属优惠:"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥0.00"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <include layout="@layout/line_color_ee" />

            <LinearLayout
                android:id="@+id/ll_interest"
                style="@style/padding_left_right"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_interest_name"
                    style="@style/layout_width_0dp"
                    android:text="余额支付"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_interest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFB44F"
                    android:textSize="@dimen/sp_15"
                    tools:text="¥1000.00" />

            </LinearLayout>

            <include layout="@layout/line_color_ee" />

            <LinearLayout
                style="@style/padding_left_right"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_amount_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="付款金额:"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥0.00"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/sp_15" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:padding="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15"
                android:text="订单信息"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/tv_orderid"
                style="@style/padding_left_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_12"
                tools:text="订单编号:           123456789012345678" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/padding_left_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/dp_8"
                android:paddingTop="@dimen/dp_8"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_12"
                tools:text="创建时间:            123456789012345678" />

            <TextView
                android:id="@+id/tv_pay_time"
                style="@style/padding_left_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/dp_14"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_12"
                android:visibility="gone"
                tools:text="支付时间:            123456789012345678" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_delete"
                    android:layout_width="@dimen/dp_96"
                    android:layout_height="@dimen/dp_29"
                    android:layout_gravity="right"
                    android:background="@drawable/shape_bt_empty_line"
                    android:text="删除订单"
                    android:textColor="@color/text_66" />

                <Button
                    android:id="@+id/bt_sure"
                    android:layout_width="@dimen/dp_96"
                    android:layout_height="@dimen/dp_29"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@drawable/shape_bt_large"
                    android:text="立即支付"
                    android:textColor="@color/white"
                    android:visibility="gone" />


            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</LinearLayout>
