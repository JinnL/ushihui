<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:layout_marginLeft="70px"
        android:layout_marginRight="70px"
        android:layout_marginTop="40px"
        android:background="@color/white"
        android:orientation="vertical"
        android:gravity="left"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72px"
            android:background="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="56px"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/yuyue_zuo_iv"
                android:layout_height="128px"
                android:layout_width="128px"
                android:src="@mipmap/user_iv"
                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/yuyue_you_tv"
                android:layout_height="128px"
                android:layout_marginLeft="56px"
                android:gravity="center_vertical"
                android:textSize="38px"
                android:text="请先实名认证/n即可参与预约"/>
        </LinearLayout>

        <Button
            android:id="@+id/yuyue_btn"
            android:layout_width="match_parent"
            android:layout_marginLeft="128px"
            android:layout_marginRight="128px"
            android:layout_height="88px"
            android:layout_marginBottom="56px"
            android:gravity="center"
            android:background="@drawable/view_red_border"
            android:textColor="#FF4500"
            android:textSize="39px"
            android:text="立即前往"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/cancel_iv"
        android:layout_height="86px"
        android:layout_width="86px"
        android:layout_marginRight="28px"
        android:layout_gravity="top|right"
        android:src="@mipmap/cancel_iv"/>

</FrameLayout>
