<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/immersion_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_title_color"
    android:orientation="vertical" >

    <include layout="@layout/app_base_title" />

    <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="#F2F2F2"
         android:orientation="vertical" >

         <EditText
             android:id="@+id/stepnew_text_file"
             android:layout_width="match_parent"
             android:layout_height="210dp"
             android:padding="10dp"
             android:layout_marginLeft="40px"
             android:layout_marginRight="40px"
             android:layout_marginTop="40px"
             android:background="#FFFFFF"
             android:ems="8"
             android:maxLength="200"
             android:gravity="left|top"
             android:textColorHint="#a0a0a0"
             android:hint="小行家力求向您提供优质、高效的服务，请您留下宝贵的建议...(200字以内)"
             android:lineSpacingExtra="4dp"
             android:textSize="14dp" >
         </EditText>

         <TextView
             android:id="@+id/num_text"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="40px"
             android:layout_marginRight="40px"
             android:layout_marginTop="10px"
             android:layout_marginBottom="40px"
             android:ems="10"
             android:gravity="right|top"
             android:textColor="#969696"
             android:text="0/200"
             android:textSize="30px" >
         </TextView>

        <Button
             android:id="@+id/opinion_submit"
             android:layout_width="match_parent"
             android:layout_height="112px"
             android:layout_marginLeft="56px"
             android:layout_marginRight="56px"
             android:layout_marginTop="84px"
             android:background="@drawable/bg_btn_corner"
             android:padding="0dp"
             android:text="提交"
             android:textColor="#ffffff" />
     </LinearLayout>

</LinearLayout>