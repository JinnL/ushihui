<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产品名称XXX期"
                android:textSize="48px"
                android:textColor="#666666"
                android:layout_marginLeft="56px"
                android:layout_centerVertical="true"
                />

            <TextView
                android:paddingBottom="10px"
                android:paddingLeft="10px"
                android:paddingTop="10px"
                android:paddingRight="10px"
                android:id="@+id/tv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到期续投30天标的"
                android:background="@drawable/bg_corner_redline"
                android:textColor="@color/base_red_color"
                android:textSize="34px"
                android:layout_marginLeft="20px"
                android:visibility="gone"
                />
            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                ></View>
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="56dp"
                android:layout_height="24dp"
                android:text="待回款"
                android:textSize="38px"
                android:gravity="center"
                android:textColor="@color/red"
                android:layout_marginRight="56px"
                android:background="@drawable/bg_corner_kong_tuoyuan_red"
                />
        <!--bg_corner_kong_tuoyuan_blue-->
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/xuxian"/>
        <LinearLayout
            android:id="@+id/ll_head"
            android:layout_marginTop="1px"
            android:layout_width="match_parent"
            android:layout_height="248px"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="56px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="到期收益（元）"
                    android:textColor="#999999"
                    android:textSize="42px"/>

                <TextView
                    android:id="@+id/tv_daoqishouyi"
                    android:layout_marginTop="36px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="72px"
                    android:textColor="@color/red"/>
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginTop="66px"
                android:layout_marginBottom="66px"
                android:background="#F1F1F1"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="56px"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:text="预期年化收益率"
                    android:textSize="42px"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="36px"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_nianhua"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/red"
                        android:textSize="72px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%"
                        android:textColor="@color/red"
                        android:textSize="42px"
                        android:paddingTop="30px"
                        />
                    <TextView
                        android:id="@+id/tv_huodong_h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+--%"
                        android:textColor="@color/red"
                        android:textSize="32px"
                        android:layout_marginBottom="20px"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:background="#FAFAFA">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="56px"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投资金额："
                    android:textColor="#999999"
                    android:layout_centerVertical="true"
                    android:textSize="42px"/>
                <TextView
                    android:id="@+id/tv_touzijine"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="66,000元"
                    android:textColor="#666666"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12px"
                    android:textSize="42px"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="56px"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:text="回款日期："
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textSize="42px"/>

                <TextView
                    android:id="@+id/tv_huikuanriqi"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="2017-03-15"
                    android:textColor="#666666"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textSize="42px"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>
