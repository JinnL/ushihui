<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_rangking_list"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@mipmap/rank_first"
    android:orientation="vertical">
    <!--
    @drawable/shape_rectangle_red_empty_4
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="17dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王*琪"
            android:textColor="@color/text1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_invest_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="150,000"
            android:textColor="@color/text1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_invest_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="2017-07-26 18:08:08"
            android:textColor="@color/text76"
            android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/tv_item_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="本期投资满标后，第*名可获得*元现金"
            android:textColor="@color/text1"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/btn_take_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@mipmap/bg_take_position"
            android:gravity="center"
            android:text="抢位"
            android:textColor="@color/textred"
            android:textSize="14sp" />

    </RelativeLayout>


</LinearLayout>