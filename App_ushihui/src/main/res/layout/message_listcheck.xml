<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#FFFFFF"
        android:orientation="horizontal"
         >

        <CheckBox
            android:id="@+id/check"
            android:layout_width="40px"
            android:layout_height="40px"
            android:background="@drawable/checked_message"
            android:button="@null"
            android:layout_marginLeft="56px"
            android:clickable="false"
            android:visibility="visible" >
        </CheckBox>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/image_message_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56px"
                android:layout_marginRight="40px"
                android:layout_marginTop="32px"
                android:src="@mipmap/icon_event" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="56px"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_message_detail"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="15px"
                    android:layout_marginBottom="15px"
                    android:layout_height="wrap_content"
                     android:layout_weight="1"
                    android:gravity="left"
                    android:text="老爷子表示他们现在越来越忙不过来了，预约的病人都已经达到了6000个，他有时候一天要看40个病人，原本的休假计划已经泡汤了"
                    android:textColor="#333333"
                    android:ellipsize="end"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/tv_message_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:layout_marginBottom="15px"
                    android:gravity="center|left"
                    android:text="2016-02-26 15:30"
                    android:textColor="#A0A0A0"
                    android:textSize="36px" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="30px"
        android:background="#D2D2D2" />

</LinearLayout>