        <TextView
            android:id="@+id/tv_title"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="营业执照"
            android:textColor="@color/text1"
            android:textSize="15sp"/>


    </LinearLayout>

</LinearLayout>