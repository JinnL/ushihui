<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/immersion_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical">

    <include layout="@layout/app_base_title" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#efefef"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d2d2d2"></View>

        <com.viewpagerindicator.TabPageIndicator
            android:id="@+id/more_indicator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_conpons"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#efefef" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#efefef"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="#efefef"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_commom_question"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/icon_common_question"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="常见问题"
                android:textColor="#FF333333"
                android:textSize="14sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#AFB0B7" />

            <TextView
                android:id="@+id/tv_contact_us"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/icon_contact_us"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="联系客服"
                android:textColor="#FF333333"
                android:textSize="14sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_usedconpons"
            android:layout_width="match_parent"
            android:layout_height="158px"
            android:layout_marginTop="0px"
            android:background="#efefef"
            android:gravity="center"
            android:text="历史优惠券"
            android:textColor="#333333"
            android:textSize="48px" />
    </LinearLayout>

</LinearLayout>
