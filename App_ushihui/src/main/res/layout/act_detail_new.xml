<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/immersion_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/detail_new"
    android:background="@color/base_title_color"
    android:orientation="vertical" >

    <include layout="@layout/app_base_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <in.srain.cube.views.ptr.PtrClassicFrameLayout
            android:id="@+id/ptr_invest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/touzi_now"
            android:background="#f2f2f2"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginTop="40px"
                    android:background="#d2d2d2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="128px"
                    android:background="#ffffff"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/tv_name_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="56px"
                        android:gravity="center"
                        android:text="产品名称"
                        android:textColor="#333333"
                        android:textSize="48px" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="56px"
                        android:gravity="right"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="56px"
                    android:background="#d2d2d2" />

                <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#ffffff"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="28px"
                                android:gravity="center"
                                android:text="预期年化收益率"
                                android:textColor="#787878"
                                android:textSize="36px" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="260px"
                                android:layout_marginTop="8px"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/tv_rate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="--%"
                                    android:textColor="@color/base_title_color"
                                    android:textSize="108px" />

                                <TextView
                                    android:id="@+id/tv_rate_jiaxi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--"
                                    android:textColor="@color/base_title_color"
                                    android:textSize="108px"
                                    />
                                <ImageView
                                    android:id="@+id/iv_rate_jiaxi_h"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="24px"
                                    android:src="@mipmap/activity_hongb"
                                    android:layout_marginTop="40px"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginBottom="56px"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/tv_deadline"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="期限--天"
                                    android:textColor="#666666"
                                    android:textSize="40px" />

                                <View
                                    android:layout_width="2px"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="48px"
                                    android:layout_marginRight="48px"
                                    android:background="#d2d2d2" />

                                <TextView
                                    android:id="@+id/tv_leastaAmount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--元起投"
                                    android:textColor="#666666"
                                    android:textSize="40px" />

                                <View
                                    android:layout_width="2px"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="48px"
                                    android:layout_marginRight="48px"
                                    android:background="#d2d2d2" />

                                <TextView
                                    android:id="@+id/tv_maxAmount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="次日计息"
                                    android:textColor="#666666"
                                    android:textSize="40px" />
                            </LinearLayout>
                        </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="#d2d2d2" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="56px"
                    android:background="#d2d2d2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="56px"
                        android:text="可用余额(元)"
                        android:textColor="#787878"
                        android:textSize="48px" />

                    <TextView
                        android:id="@+id/tv_balance"
                        android:layout_width="378px"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@+id/imageView1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="19dp"
                        android:background="#ffffff"
                        android:text="--"
                        android:textColor="#333333"
                        android:textSize="48px"
                        android:gravity="center_vertical"
                        />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_cashin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginRight="16px"
                        android:text="充值"
                        android:textColor="#333333"
                        android:textSize="48px" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="56px"
                        android:gravity="right"
                        android:src="@mipmap/icon_rightto" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="56px"
                    android:background="#d2d2d2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:background="#ffffff"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_bala"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textView3"
                        android:layout_alignParentLeft="true"
                        android:layout_alignTop="@+id/check_all"
                        android:layout_marginLeft="56px"
                        android:text="投资金额(元)"
                        android:textColor="#787878"
                        android:textSize="48px" />

                    <EditText
                        android:id="@+id/et_invest_money"
                        android:layout_width="300px"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv_bala"
                        android:layout_marginLeft="19dp"
                        android:layout_toRightOf="@+id/tv_bala"
                        android:background="#ffffff"
                        android:ems="10"
                        android:gravity="center|left"
                        android:hint="需为100的倍数"
                        android:inputType="number"
                        android:textSize="43px" >
                    </EditText>

                    <TextView
                        android:id="@+id/tv_hongbao_fanxian"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15px"
                        android:text=""
                        android:textColor="@color/base_title_color"
                        android:textSize="36px" />

                    <CheckBox
                        android:id="@+id/check_all"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="56px"
                        android:background="#ffffff"
                        android:button="@null"
                        android:drawableRight="@drawable/checked_rb"
                        android:gravity="right"
                        android:text="最大"
                        android:textColor="#333333"
                        android:textSize="48px" 
                        android:visibility="gone"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="56px"
                    android:background="#d2d2d2" />

                <LinearLayout
                        android:id="@+id/hongbao_user"
                        android:layout_width="match_parent"
                        android:layout_height="120px"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" 
                        android:visibility="gone"
                        >

                        <TextView
                            android:id="@+id/tv_h"
                            android:layout_width="270px"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/tv_chose_conpons"
                            android:layout_alignBottom="@+id/tv_chose_conpons"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="56px"
                            android:text="我的红包"
                            android:textColor="#787878"
                            android:textSize="48px" />

                        <TextView
                            android:id="@+id/tv_chose_conpons"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="19dp"
                            android:layout_weight="1"
                            android:button="@null"
                            android:gravity="left"
                            android:text="选择红包"
                            android:textColor="#333333"
                            android:textSize="48px" />

                        <ImageView
                            android:id="@+id/image_hongbao_close"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="56px"
                            android:padding="15px"
                            android:src="@mipmap/icon_close"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/greater"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="56px"
                            android:src="@mipmap/icon_rightto" />
                    </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#d2d2d2" />

               

                <LinearLayout
                    android:id="@+id/lv_check"
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" 
                    android:visibility="gone">

                    <CheckBox
                        android:id="@+id/image_sure"
                        android:layout_width="40px"
                        android:layout_height="40px"
                        android:layout_marginLeft="56px"
                        android:background="@drawable/checked_agree"
                        android:button="@null"
                        android:checked="true"
                        android:clickable="false"
                        android:visibility="visible" >
                    </CheckBox>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16px"
                        android:singleLine="true"
                        android:text="已同意并阅读 《"
                        android:textColor="#A0A0A0"
                        android:textSize="40px" >
                    </TextView>

                    <TextView
                        android:id="@+id/tv_xieyi_pro_zhuanrang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16px"
                        android:singleLine="true"
                        android:text="@string/xieyi_pro_zhuanrang"
                        android:textColor="@color/base_title_color"
                        android:textSize="42px" >
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16px"
                        android:singleLine="true"
                        android:text="》"
                        android:textColor="#A0A0A0"
                        android:textSize="40px" >
                    </TextView>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="56px"
                        android:src="@mipmap/icon_eye"
                        android:visibility="gone" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >
                </View>
            </LinearLayout>
        </in.srain.cube.views.ptr.PtrClassicFrameLayout>

        <LinearLayout
            android:id="@+id/lin_shouyi"
            android:layout_width="match_parent"
            android:layout_height="128px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="176px"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预估收益"
                android:textColor="#333333"
                android:textSize="40px" />

            <TextView
                android:id="@+id/tv_shouyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14px"
                android:text="0.00"
                android:textColor="@color/base_title_color"
                android:textSize="48px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="#333333"
                android:textSize="40px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="48px"
            android:layout_above="@+id/touzi_now" />

        <Button
            android:id="@+id/touzi_now"
            android:layout_width="match_parent"
            android:layout_height="128px"
            android:layout_alignParentBottom="true"
            android:background="@drawable/select_bt_l_red"
            android:gravity="center"
            android:padding="0dp"
            android:text="确认投资"
            android:textColor="#ffffff"
            android:textSize="48px" />
    </RelativeLayout>

</LinearLayout>