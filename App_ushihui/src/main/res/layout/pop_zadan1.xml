<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b5555555"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="969px"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/zadan1_bg"
        android:paddingLeft="40px"
        />

    <TextView
        android:id="@+id/iv_regist"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/imageView1"
        android:background="@null"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_use"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20px"
        android:text="分享再砸一次" 
        android:textColor="#ffffff"
        android:background="@drawable/bg_btn_corner1"
        android:paddingBottom="22px"
        android:paddingLeft="180px"
        android:paddingRight="180px"
        android:paddingTop="22px"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/tv_use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20px"
        android:text="立即使用" 
        android:textColor="#ffffff"
        android:background="@drawable/bg_btn_corner"
        android:paddingBottom="22px"
        android:paddingLeft="220px"
        android:paddingRight="220px"
        android:paddingTop="22px"
        android:textSize="14sp"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_regist"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20px"
        android:src="@mipmap/zadan_xi" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginTop="86px"
        android:text="+"
        android:layout_marginLeft="136px"
        android:textSize="14sp"
        android:textColor="#f15c42"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:text="1"
        android:textSize="34sp"
        android:textColor="#f15c42"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_rate"
        android:layout_alignBottom="@+id/tv_rate"
        android:layout_toRightOf="@+id/tv_rate"
        android:textSize="16sp"
        android:text="%" 
        android:textColor="#f15c42"
        />

    <TextView
        android:id="@+id/tv_biao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_below="@+id/tv_rate"
        android:layout_marginLeft="36px"
        android:text="限中胜--期使用"
        android:textSize="10sp" 
        android:textColor="#f38274"
        />

</RelativeLayout>