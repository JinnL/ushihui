<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/immersion_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" 
    >

    <RelativeLayout
        android:layout_width="920px"
        android:layout_height="820px"
        android:orientation="vertical"
        android:layout_marginLeft="20px"
        >
        <LinearLayout
            android:layout_width="852px"
            android:layout_height="750px"
            android:orientation="vertical"
            android:background="@mipmap/huikuan_red_bg"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20px"
                android:src="@mipmap/conpons_close"
                android:layout_gravity="right"
                android:layout_marginRight="20px"
                />
            <ImageView
                android:layout_width="424px"
                android:layout_height="76px"
                app:srcCompat="@mipmap/logo_hongya_white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="给您发了一个红包，金额随机"
                android:textColor="#ffffff"
                android:textSize="50px"
                android:layout_marginTop="70px"
                />
            <TextView
                android:id="@+id/tv_open"
                android:layout_width="220px"
                android:layout_height="220px"
                android:text="拆"
                android:background="@drawable/bg_corner_yellow_yuan"
                android:gravity="center"
                android:layout_marginTop="80px"
                android:textSize="90px"
                android:textColor="@color/base_title_color"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="试试手气吧~"
                android:textColor="#ffffff"
                android:textSize="50px"
                android:layout_marginTop="50px"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="370px"
            android:layout_height="370px"
            app:srcCompat="@mipmap/huikuan_red_right"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>
