<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginRight="56px"
        android:layout_marginLeft="56px"
        android:layout_height="280px">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sv_meiti"
            android:layout_width="320px"
            android:layout_height="200px"
            android:scaleType="fitXY"
            fresco:actualImageScaleType="fitCenter"
            fresco:failureImage="@mipmap/logo_default"
            fresco:failureImageScaleType="centerInside"
            fresco:placeholderImage="@mipmap/logo_default"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40px"

             />

        <TextView
            android:id="@+id/tv_title"
            android:layout_marginTop="36px"
            android:text="聚胜财富联合村诗人王博士点哪里我今儿 "
            android:layout_toLeftOf="@+id/sv_meiti"
            android:textColor="#373737"
            android:textSize="56px"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-01-11 10:00"
            android:textColor="#929292"
            android:textSize="42px"
            android:layout_marginBottom="40px"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>
