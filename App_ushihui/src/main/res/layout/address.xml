<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    style="@style/immersion_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_title_color"
    android:orientation="vertical">

    <include layout="@layout/app_base_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d2d2d2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:background="@drawable/checked_linearcolor"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="52px"
                android:gravity="center_vertical"
                android:layout_width="280px"
                android:layout_height="match_parent"
                android:text="姓名"
                android:textSize="52px"
                />
            <EditText
                android:id="@+id/et_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:hint="请填写姓名"
                android:textSize="52px"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d2d2d2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:background="@drawable/checked_linearcolor"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="52px"
                android:gravity="center_vertical"
                android:layout_width="280px"
                android:layout_height="match_parent"
                android:text="联系电话"
                android:textSize="52px"
                />
            <EditText
                android:id="@+id/et_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="请填写联系方式"
                android:background="#FFFFFF"
                android:inputType="number"
                android:maxLength="13"
                android:textSize="52px"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d2d2d2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/checked_linearcolor"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="52px"
                android:layout_width="280px"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:paddingTop="32px"
                android:text="收货地址"
                android:textSize="52px"
                />
            <EditText
                android:id="@+id/et_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingTop="32px"
                android:paddingBottom="32px"
                android:layout_weight="1"
                android:background="#ffffff"
                android:hint="请填写详细地址，不可少于5个字"
                android:textSize="52px"
                android:gravity="top"
                />
        </LinearLayout>


</LinearLayout>


</LinearLayout>