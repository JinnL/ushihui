<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/immersion_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical">

    <include layout="@layout/app_base_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_ll_person"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/jieju"
            android:layout_marginLeft="@dimen/jieju"
            android:layout_marginTop="@dimen/jieju"
            android:drawablePadding="30px"
            android:gravity="center"
            android:text="收货人"
            android:textColor="#FF333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/jieju"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:inputType="text"
            android:maxLength="16"
            android:hint="请输入收货人姓名"
            android:textColorHint="#FFAFB0B7"
            android:textColor="#FF333333"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/bg_ll_person"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/jieju"
            android:layout_marginLeft="@dimen/jieju"
            android:layout_marginTop="@dimen/jieju"
            android:drawablePadding="30px"
            android:gravity="center"
            android:text="手机号码"
            android:textColor="#FF333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/jieju"
            android:layout_weight="0.88"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:inputType="number"
            android:maxLength="11"
            android:hint="请输入手机号码"
            android:textColorHint="#FFAFB0B7"
            android:textColor="#FF333333"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_select_area"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/bg_ll_person"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/jieju"
            android:layout_marginLeft="@dimen/jieju"
            android:layout_marginTop="@dimen/jieju"
            android:drawablePadding="30px"
            android:gravity="center"
            android:text="省市地区"
            android:textColor="#FF333333"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/jieju"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/icon_rightto"
            android:gravity="right"
            android:text="点击选择"
            android:textColor="#FF333333"
            android:textSize="14sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/bg_ll_person"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/jieju"
            android:layout_marginLeft="@dimen/jieju"
            android:layout_marginTop="@dimen/jieju"
            android:drawablePadding="30px"
            android:gravity="center"
            android:text="详细地址"
            android:textColor="#FF333333"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/et_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/jieju"
            android:background="@null"
            android:hint="请输入详细地址"
            android:inputType="text"
            android:singleLine="false"
            android:text=""
            android:textColor="#FF333333"
            android:textColorHint="#FFAFB0B7"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/bg_ll_person"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/jieju"
            android:layout_marginLeft="@dimen/jieju"
            android:layout_marginTop="@dimen/jieju"
            android:drawablePadding="30px"
            android:gravity="center"
            android:text="邮政编码"
            android:textColor="#FF333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_postcode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/jieju"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:inputType="number"
            android:maxLength="6"
            android:hint="输入邮政编码"
            android:textColorHint="#FFAFB0B7"
            android:textColor="#FF333333"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/bt_save_address"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/select_bt_l_red"
        android:gravity="center"
        android:text="保存地址"
        android:textColor="#FFFFFFFF"
        android:textSize="18sp"/>

</LinearLayout>