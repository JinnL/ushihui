<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/immersion_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_title_color"
    android:orientation="vertical">

    <include layout="@layout/app_base_title" />

    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        android:id="@+id/ptr_myassets"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f2f2f2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f5edde"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="130px"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/bg_corner_bigtuoyuan"></TextView>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70px"
                        android:background="@color/base_title_color"
                        android:src="@mipmap/logo_jusheng_white" />
                </FrameLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50px"
                    android:gravity="center"
                    android:text="手气真好，红包都比别人大！"
                    android:textColor="@color/base_title_color"
                    android:textSize="60px" />

                <LinearLayout
                    android:id="@+id/bg"
                    android:layout_width="match_parent"
                    android:layout_height="330px"
                    android:layout_marginBottom="40px"
                    android:layout_marginLeft="56px"
                    android:layout_marginRight="56px"
                    android:layout_marginTop="50px"
                    android:background="@mipmap/redlist_item"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="244px"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥--"
                            android:textColor="#ffffff"
                            android:textSize="56px"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未使用"
                            android:textColor="#ffffff"
                            android:textSize="32px" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50px"
                        android:orientation="vertical"
                        android:paddingLeft="20px">

                        <LinearLayout
                            android:id="@+id/tv_wenan3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/tv_wenan1"
                            android:layout_below="@+id/tv_wenan1"
                            android:layout_marginTop="20px">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="投资金额：单笔满"
                                android:textColor="@color/base_title_color"
                                android:textSize="32px" />

                            <TextView
                                android:id="@+id/tv_wenan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textColor="@color/base_title_color"
                                android:textSize="32px" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="元"
                                android:textColor="@color/base_title_color"
                                android:textSize="32px" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_qixian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10px"
                            android:text="--"
                            android:textColor="@color/base_title_color"
                            android:textSize="32px" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10px"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_dd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="有效期至："
                                android:textColor="@color/base_title_color"
                                android:textSize="32px" />

                            <TextView
                                android:id="@+id/tv_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textColor="@color/base_title_color"
                                android:textSize="32px" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="match_parent"
                            android:layout_height="10px"
                            android:layout_marginBottom="10px"
                            android:layout_marginRight="60px"
                            android:layout_marginTop="10px"
                            android:background="@drawable/xu_line_gray"
                            android:textColor="@color/base_title_color" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/image_checked"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="50px"
                                android:background="@drawable/bg_corner_redline"
                                android:paddingBottom="10px"
                                android:paddingLeft="80px"
                                android:paddingRight="80px"
                                android:paddingTop="10px"
                                android:text="立即变现"
                                android:textColor="@color/base_title_color"
                                android:textSize="40px" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bg1"
                    android:layout_width="match_parent"
                    android:layout_height="330px"
                    android:layout_marginBottom="40px"
                    android:layout_marginLeft="56px"
                    android:layout_marginRight="56px"
                    android:background="@mipmap/redlist_item"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:visibility="gone"
                    >

                    <LinearLayout
                        android:layout_width="244px"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_money1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥100"
                            android:textColor="#ffffff"
                            android:textSize="56px"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未使用"
                            android:textColor="#ffffff"
                            android:textSize="32px" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50px"
                        android:orientation="vertical"
                        android:paddingLeft="20px">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/tv_wenan1"
                            android:layout_below="@+id/tv_wenan1"
                            android:layout_marginTop="20px">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="投资金额：单笔满"
                                android:textColor="@color/base_title_color"
                                android:textSize="32px" />

                            <TextView
                                android:id="@+id/tv_wenan1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="000"
                                android:textColor="@color/base_title_color"
                                android:textSize="32px" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="元"
                                android:textColor="@color/base_title_color"
                                android:textSize="32px" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_qixian1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10px"
                            android:text="000"
                            android:textColor="@color/base_title_color"
                            android:textSize="32px" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10px"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="有效期至："
                                android:textColor="@color/base_title_color"
                                android:textSize="32px" />

                            <TextView
                                android:id="@+id/tv_time1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2016.01.01 24:00"
                                android:textColor="@color/base_title_color"
                                android:textSize="32px" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="10px"
                            android:layout_marginBottom="10px"
                            android:layout_marginRight="60px"
                            android:layout_marginTop="10px"
                            android:background="@drawable/xu_line_gray"
                            android:textColor="@color/base_title_color" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/image_checked1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="50px"
                                android:background="@drawable/bg_corner_redline"
                                android:paddingBottom="10px"
                                android:paddingLeft="80px"
                                android:paddingRight="80px"
                                android:paddingTop="10px"
                                android:text="立即变现"
                                android:textColor="@color/base_title_color"
                                android:textSize="40px" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="更多>"
                    android:textColor="@color/color_yellow"
                    android:textSize="50px" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FBF1F0">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="90px"
                            android:layout_alignParentTop="true"
                            android:layout_weight="1"
                            android:background="@drawable/bg_corner_tuoyuan_white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="90px"
                            android:layout_alignParentTop="true"
                            android:layout_weight="1"
                            android:background="@drawable/bg_corner_tuoyuan_white" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50px"
                        android:layout_alignParentTop="true"
                        android:background="#f5edde" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FBF1F0"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="30px">

                    <View
                        android:layout_width="0px"
                        android:layout_height="2px"
                        android:layout_margin="56px"
                        android:layout_weight="1"
                        android:background="#D2CCCC" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="大家都在领红包"
                        android:textColor="@color/color_yellow"
                        android:textSize="50px" />

                    <View
                        android:layout_width="0px"
                        android:layout_height="2px"
                        android:layout_marginLeft="56px"
                        android:layout_marginRight="56px"
                        android:layout_weight="1"
                        android:background="#D2CCCC" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FBF1F0"
                    android:gravity="center_horizontal"
                    android:paddingTop="40px">

                    <com.mcz.xhj.yz.dr_view.MarqueeView
                        android:id="@+id/marqueeView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="4dp"
                        app:mvAnimDuration="1000"
                        app:mvInterval="3000"
                        app:mvSingleLine="false"
                        app:mvTextColor="#666666"
                        app:mvTextSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </in.srain.cube.views.ptr.PtrClassicFrameLayout>

</LinearLayout>
