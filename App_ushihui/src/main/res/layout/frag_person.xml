<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <View
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@drawable/bg_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:background="@drawable/bg_color">

        <TextView
            android:id="@+id/title_lefttextview"
            style="@style/layout_wrap"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/login_fanhui"
            android:gravity="center_vertical"
            android:paddingLeft="56px"
            android:text="返回"
            android:textColor="@android:color/white"
            android:textSize="52px"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/title_leftimageview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="56px"
            android:src="@mipmap/login_fanhui"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title_centertextview"
            style="@style/layout_wrap"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="小行家"
            android:textColor="@android:color/white"
            android:textSize="56px" />

        <ImageView
            style="@style/layout_wrap"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title_righttextview"
            style="@style/layout_wrap"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="56px"
            android:text="右侧文字"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/title_rightimageview"
            style="@style/layout_wrap"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="32px"
            android:src="@mipmap/icon_message"
            android:visibility="gone" />
    </RelativeLayout>
    <!-- in.srain.cube.views.ptr.PtrClassicFrameLayout -->
    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        android:id="@+id/ptr_person"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_color"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="46px"
                        android:layout_marginTop="34px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="累计收益（元）"
                            android:textColor="#ffffff"
                            android:textSize="16sp" />

                        <CheckBox
                            android:id="@+id/cb_eye"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:checked="true"
                            android:drawableLeft="@drawable/checked_eye"
                            android:paddingBottom="10px"
                            android:paddingRight="10px"
                            android:paddingTop="10px" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px">

                        <TextView
                            android:id="@+id/tv_shouyi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="#ffffff"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/tv_shouyi_secret"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="******"
                            android:textColor="#ffffff"
                            android:textSize="24sp"
                            android:visibility="gone" />
                    </FrameLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_zongzichan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="32px"
                                android:text="总资产(元)"
                                android:textColor="#ffffff"
                                android:textSize="16sp" />

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="32px">

                                <TextView
                                    android:id="@+id/tv_amount_secret"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16px"
                                    android:text="******"
                                    android:textColor="#ffffff"
                                    android:textSize="16sp"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/tv_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16px"
                                    android:text="--"
                                    android:textColor="#ffffff"
                                    android:textSize="16sp" />
                            </FrameLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="26dp"
                            android:layout_marginTop="32px"
                            android:background="#ffffff"></View>

                        <LinearLayout
                            android:id="@+id/ll_keyongyue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="32px"
                                android:text="可用余额(元)"
                                android:textColor="#ffffff"
                                android:textSize="16sp" />

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="32px">

                                <TextView
                                    android:id="@+id/tv_balance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16px"
                                    android:text="--"
                                    android:textColor="#ffffff"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/tv_balance_secret"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16px"
                                    android:text="******"
                                    android:textColor="#ffffff"
                                    android:textSize="16sp"
                                    android:visibility="gone" />
                            </FrameLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="186px"
                    android:background="#ffffff">

                    <LinearLayout
                        android:id="@+id/ll_cashout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20px"
                            android:background="@drawable/bg_corner_blackline"
                            android:paddingBottom="30px"
                            android:paddingLeft="120px"
                            android:paddingRight="120px"
                            android:paddingTop="30px"
                            android:text="提现"
                            android:textColor="@drawable/textcolor_person"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_cashin"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20px"
                            android:background="@drawable/bg_btn_color"
                            android:paddingBottom="30px"
                            android:paddingLeft="72px"
                            android:paddingRight="72px"
                            android:paddingTop="30px"
                            android:text="快速充值"
                            android:textColor="#ffffff"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/iv_person_conpons"
                            android:layout_width="110px"
                            android:layout_height="92px"
                            android:src="@mipmap/icon_person_conp"
                            android:visibility="gone" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#d2d2d2" />

                <LinearLayout
                    android:id="@+id/ll_newinvest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffe9c8"
                    android:orientation="horizontal"
                    android:padding="30px"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_tongzhi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:drawableLeft="@mipmap/person_point"
                        android:drawablePadding="10px"
                        android:text="温馨提示:您有收礼信息尚未完善，立即完善"
                        android:textColor="@color/base_red_color"
                        android:textSize="40px" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_myinvest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:background="@drawable/bg_ll_person"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/jieju"
                        android:layout_marginLeft="@dimen/jieju"
                        android:layout_marginTop="@dimen/jieju"
                        android:drawableLeft="@mipmap/person_myinvest"
                        android:drawablePadding="30px"
                        android:text="我的投资"
                        android:textColor="#4d4d4d"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/jieju"
                        android:layout_weight="1"
                        android:drawablePadding="10px"
                        android:drawableRight="@mipmap/icon_rightto"
                        android:gravity="right"
                        android:textColor="#4d4d4d"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="130px"
                    android:background="#d2d2d2" />

                <LinearLayout
                    android:id="@+id/ll_conpons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_ll_person"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/jieju"
                        android:layout_marginLeft="@dimen/jieju"
                        android:layout_marginTop="@dimen/jieju"
                        android:drawableLeft="@mipmap/person_red"
                        android:drawablePadding="30px"
                        android:text="优惠券"
                        android:textColor="#4d4d4d"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_red"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="@dimen/jieju"
                        android:layout_weight="1"
                        android:drawablePadding="10px"
                        android:drawableRight="@mipmap/icon_rightto"
                        android:gravity="right"
                        android:text=""
                        android:textColor="#999999"
                        android:textSize="40px" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="130px"
                    android:background="#d2d2d2" />

                <LinearLayout
                    android:id="@+id/ll_myassets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_ll_person"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/jieju"
                        android:layout_marginLeft="@dimen/jieju"
                        android:layout_marginTop="@dimen/jieju"
                        android:drawableLeft="@mipmap/person_experience"
                        android:drawablePadding="30px"
                        android:text="体验金"
                        android:textColor="#4d4d4d"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_tiyan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/jieju"
                        android:layout_weight="1"
                        android:drawablePadding="10px"
                        android:drawableRight="@mipmap/icon_rightto"
                        android:gravity="right"
                        android:textColor="#999999"
                        android:textSize="40px" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="130px"
                    android:background="#d2d2d2" />

                <LinearLayout
                    android:id="@+id/ll_myInvite"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_ll_person"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/jieju"
                        android:layout_marginLeft="@dimen/jieju"
                        android:layout_marginTop="@dimen/jieju"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/person_invist"
                        android:drawablePadding="30px"
                        android:text="我的邀请"
                        android:textColor="#4d4d4d"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_invite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/invitefriend_icon"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:layout_marginRight="@dimen/jieju"
                        android:drawablePadding="10px"
                        android:drawableRight="@mipmap/icon_rightto"
                        android:gravity="right"
                        android:textColor="#4d4d4d"
                        android:textSize="40px" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="130px"
                    android:background="#d2d2d2" />

                <LinearLayout
                    android:id="@+id/ll_userinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_ll_person"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/jieju"
                        android:layout_marginLeft="@dimen/jieju"
                        android:layout_marginTop="@dimen/jieju"
                        android:drawableLeft="@mipmap/person_safe"
                        android:drawablePadding="30px"
                        android:text="安全中心"
                        android:textColor="#4d4d4d"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_safe_add"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/jieju"
                        android:layout_weight="1"
                        android:drawablePadding="10px"
                        android:drawableRight="@mipmap/icon_rightto"
                        android:gravity="right"
                        android:textColor="#999999"
                        android:textSize="40px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_myInvite2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_ll_person"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/jieju"
                        android:layout_marginLeft="@dimen/jieju"
                        android:layout_marginTop="@dimen/jieju"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/person_invist"
                        android:drawablePadding="30px"
                        android:text="我的邀请2"
                        android:textColor="#4d4d4d"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_invite2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/invitefriend_icon"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:layout_marginRight="@dimen/jieju"
                        android:drawablePadding="10px"
                        android:drawableRight="@mipmap/icon_rightto"
                        android:gravity="right"
                        android:textColor="#4d4d4d"
                        android:textSize="40px" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="130px"
                    android:background="#d2d2d2" />

                <LinearLayout
                    android:id="@+id/ll_myInvite3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_ll_person"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/jieju"
                        android:layout_marginLeft="@dimen/jieju"
                        android:layout_marginTop="@dimen/jieju"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/person_invist"
                        android:drawablePadding="30px"
                        android:text="我的邀请3"
                        android:textColor="#4d4d4d"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_invite3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/invitefriend_icon"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:layout_marginRight="@dimen/jieju"
                        android:drawablePadding="10px"
                        android:drawableRight="@mipmap/icon_rightto"
                        android:gravity="right"
                        android:textColor="#4d4d4d"
                        android:textSize="40px" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="130px"
                    android:background="#d2d2d2" />

                <LinearLayout
                    android:id="@+id/ll_myInvite4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_ll_person"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/jieju"
                        android:layout_marginLeft="@dimen/jieju"
                        android:layout_marginTop="@dimen/jieju"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/person_invist"
                        android:drawablePadding="30px"
                        android:text="我的邀请4"
                        android:textColor="#4d4d4d"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_invite4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/invitefriend_icon"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:layout_marginRight="@dimen/jieju"
                        android:drawablePadding="10px"
                        android:drawableRight="@mipmap/icon_rightto"
                        android:gravity="right"
                        android:textColor="#4d4d4d"
                        android:textSize="40px" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="130px"
                    android:background="#d2d2d2" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="40px"
                    android:background="#f2f2f2" />


            </LinearLayout>
        </ScrollView>
    </in.srain.cube.views.ptr.PtrClassicFrameLayout>

</LinearLayout>