<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/immersion_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#50000000"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_bg"
        android:layout_marginLeft="128px"
        android:layout_marginRight="128px"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/xutou_close"
            android:paddingRight="40px"
            android:paddingTop="20px"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="40px"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="@color/base_title_color"
                android:textSize="120px"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="聚胜财富联手恒丰银行"
            android:layout_gravity="center"
            android:textSize="48px"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginTop="40px"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="个人账户升级为恒丰银行存管账户"
            android:layout_gravity="center"
            android:textSize="40px"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginTop="60px"
            android:layout_marginBottom="60px"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="168px"
            android:text="您尚未开通恒丰银行资金存管账户,请先开通"
            android:layout_gravity="center"
            android:textSize="38px"
            android:textColor="#939393"
            android:gravity="center"
            android:layout_marginTop="60px"
            android:background="#ffffff"
            />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#939393"/>
        <Button
            android:id="@+id/bt_ok"
            android:layout_width="match_parent"
            android:layout_height="128px"
            android:padding="0dp"
            android:text="马上开通"
            android:background="#ffffff"
            android:textColor="@color/red"
            android:textSize="50px"
            />

        </LinearLayout>
    </LinearLayout>
    

</LinearLayout>
