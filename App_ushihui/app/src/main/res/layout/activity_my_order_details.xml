<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ekabao.oil.ui.activity.me.MyOrderDetailsActivity">

    <include layout="@layout/app_base_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                style="@style/margin_left_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_18"
                android:background="@drawable/shape_rectangle_empty_13"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/layout_width_0dp"
                        android:layout_height="@dimen/dp_49"
                        android:drawableLeft="@drawable/icon_my_order_going"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp_15"
                        tools:text="3个月加油套餐" />

                    <Button
                        android:id="@+id/bt_refund"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:text="退订"
                        android:textColor="@color/primary"
                        android:visibility="gone" />
                </LinearLayout>


                <include layout="@layout/line_color_ee" />

                <LinearLayout
                    android:id="@+id/ll_oilcard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_19"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_22"
                    android:paddingRight="@dimen/dp_19">

                    <TextView
                        style="@style/layout_width_0dp"
                        android:text="油卡类型"
                        android:textColor="@color/text_99"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_card_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp_15"
                        tools:text="中石化加油卡" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_19"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_22"
                    android:paddingRight="@dimen/dp_19">

                    <TextView
                        android:id="@+id/tv_card_title"
                        style="@style/layout_width_0dp"
                        android:text="油卡卡号"
                        android:textColor="@color/text_99"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_card_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp_15"
                        tools:text="9030160201092360" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_month_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_19"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_22"
                    android:paddingRight="@dimen/dp_19">

                    <TextView
                        android:id="@+id/tv_month_money_title"
                        style="@style/layout_width_0dp"
                        android:text="月充值额"
                        android:textColor="@color/text_99"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_month_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp_15"
                        tools:text="¥1000.00" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_19"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_22"
                    android:paddingRight="@dimen/dp_19">

                    <TextView
                        style="@style/layout_width_0dp"
                        android:text="订单内容"
                        android:textColor="@color/text_99"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_fullName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp_15"
                        tools:text="7.5折，24个月加油套餐" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_19"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_22"
                    android:paddingRight="@dimen/dp_19">

                    <TextView
                        style="@style/layout_width_0dp"
                        android:text="优惠券"
                        android:textColor="@color/text_99"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_fAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFB44F"
                        android:textSize="@dimen/sp_15"
                        tools:text="-¥30.00" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_interest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_19"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_22"
                    android:paddingRight="@dimen/dp_19"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_interest_name"
                        style="@style/layout_width_0dp"
                        android:text="余额支付"
                        android:textColor="@color/text_99"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_interest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFB44F"
                        android:textSize="@dimen/sp_15"
                        tools:text="¥1000.00" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_19"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_22"
                    android:paddingRight="@dimen/dp_19">

                    <TextView

                        android:id="@+id/tv_amount_name"
                        style="@style/layout_width_0dp"
                        android:text="支付金额"
                        android:textColor="@color/text_99"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FF6571"
                        android:textSize="@dimen/sp_15"
                        tools:text="¥1000.00" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_rechargeList"
                style="@style/margin_left_right"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/shape_rectangle_empty_13"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_19"
                android:paddingRight="@dimen/dp_19">

                <TextView
                    android:id="@+id/tv_recharge"
                    style="@style/layout_width_0dp"
                    android:text="充值计划"
                    android:textColor="@color/text_99"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/tv_rechargeList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableRight="@drawable/icon_arrow"
                    android:gravity="center_vertical"
                    android:textColor="#FF6571"
                    android:textSize="@dimen/sp_15"
                    tools:text="2/3" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pay"
                style="@style/margin_left_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/shape_rectangle_empty_13"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_19"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_22"
                    android:paddingRight="@dimen/dp_19">

                    <TextView
                        style="@style/layout_width_0dp"
                        android:text="订单编号"
                        android:textColor="@color/text_99"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_agreementNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp_15"
                        tools:text="¥1000.00" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_paytype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_19"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_22"
                    android:visibility="gone"
                    android:paddingRight="@dimen/dp_19">

                    <TextView
                        style="@style/layout_width_0dp"
                        android:text="支付方式"
                        android:textColor="@color/text_99"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_payType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp_15"
                        tools:text="7.5折，24个月加油套餐" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_17"
                    android:layout_marginTop="@dimen/dp_19"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_22"
                    android:paddingRight="@dimen/dp_19">

                    <TextView
                        android:id="@+id/tv_invest_name"
                        style="@style/layout_width_0dp"
                        android:text="支付时间"
                        android:textColor="@color/text_99"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_investTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_99"
                        android:textSize="@dimen/sp_15"
                        tools:text="-¥30.00" />

                </LinearLayout>

                <LinearLayout
                   android:id="@+id/ll_refundTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_17"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:paddingLeft="@dimen/dp_22"
                    android:paddingRight="@dimen/dp_19">

                    <TextView
                        style="@style/layout_width_0dp"
                        android:text="退订时间"
                        android:textColor="@color/text_99"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_refundTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_99"
                        android:textSize="@dimen/sp_15"
                        tools:text="-¥30.00" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_delete"
                    android:layout_width="@dimen/dp_96"
                    android:layout_height="@dimen/dp_29"
                    android:layout_gravity="right"
                    android:background="@drawable/shape_bt_empty_line"
                    android:text="取消订单"
                    android:textColor="@color/text_66"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/bt_sure"
                    android:layout_width="@dimen/dp_96"
                    android:layout_height="@dimen/dp_29"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@drawable/shape_bt_large"
                    android:text="立即支付"
                    android:textColor="@color/white"
                    android:visibility="gone" />


            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
