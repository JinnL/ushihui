<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_all"
    style="@style/immersion_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



        <include layout="@layout/app_base_title"/>




        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_title"
            android:background="#F2F2F2"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="可提现 "
                        android:textColor="#FF666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_balance_a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="#EF5E41"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:textColor="#666666"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="56px"
                    android:textColor="@color/base_red_color"
                    android:visibility="gone" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="0dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_bank"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/bg_corner_white_yuan"
                        android:src="@drawable/bank_zhaoshang" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_bankname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="中国银行"
                                android:textColor="#FF333333"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_banknum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="储蓄卡(****)"
                                android:textColor="#FF333333"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_balance_now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预计1个工作日内到账，手续费"
                        android:textColor="#FFC9C4C3"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_balance_n"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="#EF5E41"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:textColor="#FFC9C4C3"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_empty1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="56px"
                        android:text="提现金额(元)"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100px"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:hint=""
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:textColorHint="#C9C4C3"
                        android:textSize="14sp"></EditText>

                    <TextView
                        android:id="@+id/tv_cashout_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="全部提现"
                        android:textColor="#FF4190EF"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="96px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="56px"
                        android:gravity="center"
                        android:text="收不到验证码？"
                        android:textColor="#888888"
                        android:textSize="40px" />

                    <TextView
                        android:id="@+id/tv_yuying"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="点击获取语音验证码"
                        android:textColor="@color/text_black"
                        android:textSize="40px" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:text="温馨提示"
                    android:textColor="#333333"
                    android:textSize="40px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"
                    android:drawableLeft="@drawable/bg_corner_black_yuan"
                    android:drawablePadding="20px"
                    android:text="每位用户每月可享受2次免费提现 ，超出后提现手续费为2元/笔，手续费将从您的提现金额中扣除；"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"
                    android:drawableLeft="@drawable/bg_corner_black_yuan"
                    android:drawablePadding="20px"
                    android:text="每位用户提现最高单笔500万元，单日单月无上限，每月前2笔提现1元起提，后续每笔提现3元起提；"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"
                    android:drawableLeft="@drawable/bg_corner_black_yuan"
                    android:drawablePadding="20px"
                    android:text="提现后24小时内到账，具体到账时间视银行而定；"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"
                    android:drawableLeft="@drawable/bg_corner_black_yuan"
                    android:drawablePadding="20px"
                    android:text="体验金收益需完成一次真实出借后才可提现；"
                    android:textColor="#666666"
                    android:visibility="gone"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20px"
                    android:drawableLeft="@drawable/bg_corner_black_yuan"
                    android:drawablePadding="20px"
                    android:text="若提现过程中遇到任何问题，请及时联系我们"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/bt_ok"
                    style="@style/bt_large_match"
                    android:layout_marginTop="26dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text="提现到银行卡"
                    android:textColor="#FFFFFFFF"
                    android:textSize="18sp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_bottom"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_commom_question"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="常见问题"
            android:textColor="@color/text_blue"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#AFB0B7" />

        <TextView
            android:id="@+id/tv_contact_us"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="联系客服"
            android:textColor="@color/text_blue"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>