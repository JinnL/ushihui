<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        style="@style/margin_left_right"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_91"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/shape_rectangle_empty_13"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_alignBaseline="@+id/tv_money"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toLeftOf="@+id/tv_money"
            android:layout_toRightOf="@+id/iv_state"
            android:drawableLeft="@drawable/icon_zhongshihua_addcard"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            app:layout_constraintRight_toLeftOf="@id/tv_state"
            android:maxLines="1"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_15"
            app:layout_constraintBottom_toTopOf="@id/tv_time"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="中国石化 加油卡中国石化 加油卡" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/bg_oil_package_selected_round"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_2"
            android:paddingRight="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_2"
            android:text="进行中"
            android:textColor="@color/white"
            app:layout_constraintRight_toLeftOf="@id/tv_money"
            android:textSize="@dimen/dp_12"
            app:layout_constraintBottom_toBottomOf="@id/tv_name"
            app:layout_constraintLeft_toRightOf="@id/tv_name"
            app:layout_constraintTop_toTopOf="@id/tv_name" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_0"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center_vertical"
            android:textColor="#FF6571"
            app:layout_constraintLeft_toRightOf="@id/tv_state"
            android:textSize="@dimen/sp_15"
            app:layout_constraintBottom_toBottomOf="@id/tv_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_name"
            tools:text="￥17258.00" />


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_0"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_12"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/text_99"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            tools:text="2018/06/18 10:33:23" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_0"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_15"
            android:drawableRight="@drawable/icon_arrow"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="查看详情"
            app:layout_constraintBottom_toBottomOf="@id/tv_time"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_time" />


    </android.support.constraint.ConstraintLayout>


</LinearLayout>