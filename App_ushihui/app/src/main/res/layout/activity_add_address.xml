<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/app_base_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_ll_person"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_97"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_14"
            android:text="收货人"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_13" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/jieju"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入收货人姓名"
            android:inputType="text"
            android:maxLength="16"
            android:textColor="#FF333333"
            android:textColorHint="#FFAFB0B7"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="1dp"
        android:background="@drawable/bg_ll_person"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_97"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_14"
            android:text="手机号码"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_13" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/jieju"
            android:layout_weight="0.88"
            android:background="@null"
            android:hint="请输入手机号码"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="#FF333333"
            android:textColorHint="#FFAFB0B7"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_select_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="1dp"
        android:background="@drawable/bg_ll_person"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_97"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_14"
            android:text="所在地区"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/jieju"
            android:layout_weight="1"
            android:text="请选择所在地区"
            android:textColor="@color/text_99"
            android:textSize="@dimen/sp_13" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_14"
            android:src="@drawable/icon_arrow2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="1dp"
        android:background="@drawable/bg_ll_person"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_97"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_14"
            android:text="详细地址"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_13" />

        <EditText
            android:id="@+id/et_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/jieju"
            android:background="@null"
            android:hint="请输入详细地址"
            android:inputType="text"
            android:singleLine="false"
            android:text=""
            android:textColor="#FF333333"
            android:textColorHint="#FFAFB0B7"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="1dp"
        android:background="@drawable/bg_ll_person"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_97"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_14"
            android:text="邮政编码"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_13" />

        <EditText
            android:id="@+id/et_postcode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/jieju"
            android:layout_weight="1"
            android:background="@null"
            android:hint="输入邮政编码"
            android:inputType="number"
            android:maxLength="6"
            android:textColor="#FF333333"
            android:textColorHint="#FFAFB0B7"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/bt_save_address"
        style="@style/bt_large_match"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/shape_rectangle_red_88px"
        android:gravity="center"
        android:text="确认添加" />
</LinearLayout>