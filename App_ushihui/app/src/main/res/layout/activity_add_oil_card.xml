<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ekabao.oil.ui.activity.me.AddOilCardActivity">

    <include layout="@layout/app_base_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:text="油卡类型"
        android:textColor="@color/text_99"
        android:textSize="@dimen/sp_14" />

    <!--中石油，CNPC  中石化Sinopec-->
    <LinearLayout
        android:id="@+id/ll_sinopec"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_17"
        android:paddingRight="@dimen/dp_15">

        <TextView
            style="@style/layout_width_0dp"
            android:drawableLeft="@drawable/icon_zhongshihua_addcard"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="中石化"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/cb_sinopec"
            style="@style/layout_wrap"
            android:button="@drawable/checked_oil_card"
            android:checked="true"
            android:clickable="false" />
    </LinearLayout>

    <include layout="@layout/line_color_ee" />

    <LinearLayout
        android:id="@+id/ll_cnpc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_17"
        android:paddingRight="@dimen/dp_15">

        <TextView
            style="@style/layout_width_0dp"
            android:drawableLeft="@drawable/icon_zhongshiyou_addcard"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="中石油"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/cb_cnpc"
            style="@style/layout_wrap"
            android:button="@drawable/checked_oil_card"
            android:clickable="false" />
    </LinearLayout>

    <include layout="@layout/line_color_ee" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:text="卡片信息"
        android:textColor="@color/text_99"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_17"
        android:paddingRight="@dimen/dp_15">

        <TextView
            style="@style/layout_wrap"
            android:layout_width="@dimen/dp_83"
            android:gravity="center_vertical"
            android:text="油卡卡号"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_code"
            style="@style/layout_width_0dp"
            android:background="@null"

            android:hint="请输入油卡卡号"
            android:inputType="number"

            android:maxLength="19"
            android:textColorHint="@color/text_99"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <include layout="@layout/line_color_ee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_17"
        android:paddingRight="@dimen/dp_15">

        <TextView
            style="@style/layout_wrap"
            android:layout_width="@dimen/dp_83"
            android:gravity="center_vertical"
            android:text="确认卡号"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_code_again"
            style="@style/layout_width_0dp"
            android:background="@null"
            android:hint="请再次输入油卡卡号"
            android:inputType="number"

            android:maxLength="19"
            android:textColorHint="@color/text_99"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <include layout="@layout/line_color_ee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_17"
        android:paddingRight="@dimen/dp_15">

        <TextView

            style="@style/layout_wrap"
            android:layout_width="@dimen/dp_83"
            android:gravity="center_vertical"
            android:text="持卡人"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_name"
            style="@style/layout_width_0dp"
            android:background="@null"
            android:hint="请输入持卡人姓名"
            android:inputType="textPersonName"
            android:maxLength="30"

            android:textColorHint="@color/text_99"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <include layout="@layout/line_color_ee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_17"
        android:paddingRight="@dimen/dp_15">

        <TextView
            style="@style/layout_wrap"
            android:layout_width="@dimen/dp_83"
            android:gravity="center_vertical"
            android:text="手机号"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_phone"
            style="@style/layout_width_0dp"
            android:background="@null"
            android:hint="请输入持卡人手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:textColorHint="@color/text_99"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <include layout="@layout/line_color_ee" />

    <LinearLayout
        android:id="@+id/ll_xieyi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_xieyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checked_oil_card_xieyi"
            android:checked="true"
         />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="添加即代表您同意"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《服务协议》"
            android:textColor="@color/primary"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/bt_add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/primary"
        android:text="确认添加"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15" />

</LinearLayout>
