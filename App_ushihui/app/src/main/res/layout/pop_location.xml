<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b5555555"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/shape_rectangle_white_10"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:text="定位服务未开启"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_20" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:text="开启后可获取附近加油站及当地今日油价~"
            android:textColor="@color/text_bb"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_80"
            android:layout_margin="@dimen/dp_15"
            android:background="@drawable/shape_rectangle_bantouming"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="@string/tv_location"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_location_go"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/shape_bt_large"
            android:gravity="center"
            android:text="去开启"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />


        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:gravity="center"
            android:text="暂不需要"
            android:textColor="@color/text_bb"
            android:textSize="@dimen/sp_14" />


    </LinearLayout>

    <TextView
        android:id="@+id/peron_login_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:drawableRight="@drawable/icon_pop_close" />

</LinearLayout>