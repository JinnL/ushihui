<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dp_270"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle_empty_13"
        android:orientation="vertical">
        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18"
            android:gravity="center_horizontal"
            android:text="确认付款"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_17"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/dp_22"
            android:paddingRight="@dimen/dp_22"
            android:text="为了确保你的资金安全已向**** 发送支付验证码"
            android:textColor="@color/text_99"
            android:textSize="@dimen/sp_13"
            android:visibility="visible" />


        <LinearLayout
            android:layout_width="@dimen/dp_164"
            android:layout_height="@dimen/dp_38"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_11"
            android:background="@drawable/shape_rectangle_empty_line_e6"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_sms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="短信验证码"
                android:paddingLeft="@dimen/dp_3"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="6"
                android:textColorHint="@color/text_cc"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="@dimen/sp_14"

                />

            <TextView
                android:id="@+id/tv_send_sms"
                android:layout_width="@dimen/dp_38"
                android:layout_height="match_parent"
                android:background="@color/line_ee"
                android:clickable="true"
                android:gravity="center"
                android:text="发送"
                android:textColor="@color/text_red"
                android:textSize="@dimen/sp_14" />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginTop="@dimen/dp_11"
            android:background="@color/line_e6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cacel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/text_99"
                android:textSize="@dimen/sp_17" />

            <View
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="match_parent"
                android:background="@color/line_e6" />

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/text_red"
                android:textSize="@dimen/sp_17" />

        </LinearLayout>

        <!-- button pannel -->
    </LinearLayout>
</LinearLayout>