<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        style="@style/margin_left_right"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_87"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_goods_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/iv_goods_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY" />

    </LinearLayout>

    <LinearLayout
        style="@style/margin_left_right"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_87"
        android:layout_marginBottom="@dimen/dp_15"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_goods_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/iv_goods_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/iv_goods_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY" />


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_137"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp_8"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/iv_go"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_3"
            android:background="@drawable/shape_rectangle_white_4"
            android:scaleType="fitXY"
            tools:src="@mipmap/ic_launcher" />

    </RelativeLayout>


</LinearLayout>