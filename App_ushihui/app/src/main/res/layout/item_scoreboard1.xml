<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_padding_24"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_73"
    android:background="@color/white"
    android:orientation="horizontal">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avatar"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:src="@drawable/img_crown_first" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_toRightOf="@+id/img_avatar"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp_14"
        tools:text="138****1234" />


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_toRightOf="@+id/img_avatar"
        android:textColor="@color/text_66"
        android:textSize="10sp"
        tools:text="本期出借满额后，第1名可获得20元现金" />


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12px"
        android:layout_marginTop="20px"
        android:text="2018/05/31
10:35:37"
        android:textColor="@color/text_66"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="75px"
        android:layout_marginTop="30px"
        android:layout_toLeftOf="@+id/tv_time"
        android:text="0元"
        android:textColor="@color/text_black"
        android:textSize="14sp" />
    <Button
        android:id="@+id/bt_invest"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_20"
        android:layout_alignParentBottom="true"

        android:layout_marginBottom="@dimen/dp_12"
        android:layout_alignParentRight="true"
        android:text="我要抢位"
        android:gravity="center"
        android:background="@drawable/select_bt_red_40"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/white"
        style="?android:attr/borderlessButtonStyle"
        />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/line_ee"
        android:layout_alignParentBottom="true"
        />
    
</RelativeLayout>