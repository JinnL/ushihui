<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:textColor="@color/text_bb"
        android:textSize="12sp"
        tools:text="- 2018/06/11 16:00 -" />

    <RelativeLayout
        style="@style/margin_left_right"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_77"
        android:background="@drawable/shape_rectangle_white_10"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="@dimen/dp_77"
            android:layout_height="@dimen/dp_48"
            tools:src="@drawable/icon_new_1"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_87"
            android:layout_marginTop="@dimen/dp_15"
            android:text="平台公告"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_15"

            />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_87"
            android:layout_marginTop="@dimen/dp_44"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="感恩回馈，超低折扣活动限时开启…"
            android:textColor="@color/text_99"
            android:textSize="@dimen/sp_12" />
        
        
        
     

    </RelativeLayout>


</LinearLayout>