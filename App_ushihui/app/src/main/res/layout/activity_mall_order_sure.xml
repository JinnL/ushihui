<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ekabao.oil.ui.activity.OilCardBuyActivity">

    <include layout="@layout/app_base_title"

        />

    <RelativeLayout
        style="@style/padding_left_right"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="@color/white">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/ll_add_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ib_add_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_address" />

                <TextView
                    style="@style/layout_width_0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="请添加收货地址！"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_arrow" />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_address" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_arrow_gray_r" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_28"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_15"
                    tools:text="张三 " />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_name"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_15"
                    tools:text="12489999291" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="@dimen/dp_250"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginLeft="@dimen/dp_28"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/text_99"
                    android:textSize="@dimen/sp_12"
                    tools:text="杭州市江干区钱江时代国际广场2号楼170" />

            </RelativeLayout>

        </FrameLayout>


    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_line_1" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_96"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:padding="@dimen/dp_15">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="@dimen/dp_66"
            android:layout_height="@dimen/dp_66"
            android:layout_centerVertical="true"
            tools:src="@color/primary" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_toRightOf="@+id/iv_photo"
            android:maxLines="2"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_13"
            tools:text="德国德朗士 多功能加热破壁机家用料理机新多功能加热破壁机家" />

        <TextView
            android:id="@+id/tv_specification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@+id/iv_photo"
            android:textColor="@color/text_99"
            android:textSize="@dimen/sp_11"
            tools:text="高配版" />


        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:maxLines="1"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_13"
            tools:text="x1" />

        <TextView
            android:id="@+id/tv_retailPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@+id/tv_num"
            android:maxLines="2"
            android:textColor="@color/primary"
            android:textSize="@dimen/sp_15"
            tools:text="￥372.00" />
    </RelativeLayout>


    <LinearLayout
        style="@style/padding_left_right"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_53"
        android:layout_marginTop="@dimen/dp_0_5"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/layout_width_0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买数量" />


        <TextView
            android:id="@+id/btn_sku_quantity_minus"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/com_sku_quantity_minus_selector"
            android:enabled="false"
            android:gravity="center"
            android:padding="0dp"
            android:text="－"
            android:textColor="@drawable/quantity_operator_text_selector"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/et_sku_quantity_input"
            android:layout_width="40dp"
            android:layout_height="28dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/com_sku_quantity_input_selector"
            android:ellipsize="end"
            android:gravity="center"
            android:enabled="false"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="5"
            android:maxLines="1"
            android:maxWidth="100dp"
            android:minWidth="21dp"
            android:text="1"
            android:textColor="@color/comm_text_gray_dark"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_sku_quantity_plus"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/com_sku_quantity_plus_selector"
            android:gravity="center"
            android:padding="0dp"
            android:text="＋"
            android:textColor="@drawable/quantity_operator_text_selector"
            android:textSize="18dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_rule"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_0_5"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:text="不支持7天无理由"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp_12" />


    <LinearLayout
        style="@style/padding_left_right"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_0_5"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注信息:  "
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_12" />

        <EditText
            android:id="@+id/et_bz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="选填：填写您想说的内容"
            android:maxLines="1"
            android:lines="30"
            android:textColorHint="@color/text_bb"
            android:textSize="@dimen/sp_12" />


    </LinearLayout>

    <LinearLayout
        style="@style/padding_left_right"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_0_5"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/layout_width_0dp"
            android:gravity="right"
            android:text="共1件商品  小计:  ￥"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="372"
            android:textColor="@color/primary"
            android:textSize="@dimen/sp_18" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_17">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center_vertical"
            android:text="总计"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_24"

            android:gravity="center_vertical"
            android:text="￥"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/tv_all_money"
            style="@style/layout_width_0dp"
            android:layout_marginRight="@dimen/dp_5"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_18"
            tools:text="10.00" />

        <TextView
            android:id="@+id/tv_cheaper"
            style="@style/layout_width_0dp"
            android:gravity="center_vertical"
            android:text="(省0.00)"
            android:textColor="@color/primary"
            android:textSize="@dimen/sp_11"
            android:visibility="gone" />

        <Button
            android:id="@+id/bt_buy"
            android:layout_width="@dimen/dp_135"
            android:layout_height="match_parent"
            android:background="@color/primary"
            android:text="提交订单"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

</LinearLayout>
