<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.ekabao.oil.ui.activity.me.OrderSelectActivity">

    <include layout="@layout/app_base_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15">

        <ImageButton
            android:id="@+id/ib_select_1"
            android:layout_width="@dimen/dp_161"
            android:layout_height="@dimen/dp_125"
            android:background="@null"
            android:src="@drawable/bg_order_select_1" />

        <ImageButton
            android:id="@+id/ib_select_2"
            android:layout_width="@dimen/dp_161"
            android:layout_height="@dimen/dp_125"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:src="@drawable/bg_order_select_2" />

        <ImageButton
            android:id="@+id/ib_select_3"
            android:layout_width="@dimen/dp_161"
            android:layout_height="@dimen/dp_125"
            android:background="@null"
            android:layout_below="@+id/ib_select_1"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@drawable/bg_order_select_3" />
    </RelativeLayout>


</LinearLayout>
