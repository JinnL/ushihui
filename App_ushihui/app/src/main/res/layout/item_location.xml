<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rl_location_go"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@drawable/shape_rectangle_white_6">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_25">

            <LinearLayout
                android:id="@+id/ll_oil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_oil_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxEms="13"
                    android:text="中石化崇文门加油站"
                    android:textColor="@color/view_black"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_location_zk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:background="@drawable/icon_location_zk"
                    android:paddingBottom="5px"
                    android:paddingLeft="10px"
                    android:paddingRight="10px"
                    android:paddingTop="5px"
                    android:text="折扣"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:id="@+id/tv_location_zy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:background="@drawable/icon_location_zy"
                    android:paddingBottom="5px"
                    android:paddingLeft="10px"
                    android:paddingRight="10px"
                    android:paddingTop="5px"
                    android:text="直营"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_11" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_oil_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_oil"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_oil_address"
                    style="@style/layout_wrap"
                    android:layout_marginTop="@dimen/dp_10"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/text_bb"
                    android:textSize="@dimen/sp_13"
                    tools:text="北京市崇文区崇文门东大街甲222222..." />


                <TextView
                    android:id="@+id/tv_oil_distance"
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/shape_location_gray"
                    android:gravity="center"
                    android:text="24.98km"
                    android:textColor="@color/view_black"
                    android:textSize="@dimen/sp_12" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_oil_address"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_oil_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6.15"
                    android:textColor="@color/bt"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="元/升"
                    android:textColor="@color/bg_click"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_location_go"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_50"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:drawableTop="@drawable/icon_location_go"
                android:text="开启导航"
                android:gravity="center_horizontal"
                android:textColor="#155cfc"
                android:textSize="@dimen/sp_13" />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>