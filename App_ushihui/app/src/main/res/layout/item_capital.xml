<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_month"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center|left"
        android:paddingLeft="@dimen/dp_12"
        android:textColor="@color/text_99"
        android:textSize="@dimen/sp_15"
        android:visibility="gone"
        tools:text="本月" />

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_marginTop="@dimen/dp_10"
        style="@style/margin_left_right"
        android:padding="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle_white_6"
        >


        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_1"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_18"
            tools:text="-200000.00" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_money"
            android:layout_alignBaseline="@+id/tv_money"
            android:maxLines="1"
            android:textColor="@color/text_black"
            android:textSize="15sp"
            tools:text="购买#913个月加油套餐]" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:maxLines="1"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/text_99"
            android:textSize="12sp"
            tools:text="2018/06/18 10:33:23" />

        <TextView
            android:id="@+id/tv_surplusAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_money"
            android:layout_marginTop="@dimen/dp_11"
            android:textColor="@color/text_99"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="余额 201519.10" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:visibility="gone"
            android:layout_below="@+id/tv_time"
            android:background="@color/line_e6" />

    </RelativeLayout>


</LinearLayout>