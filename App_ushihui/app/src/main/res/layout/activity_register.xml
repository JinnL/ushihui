<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/immersion_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_18">

    <RelativeLayout
        android:id="@+id/ll_title_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topbar_height">

        <ImageView
            android:id="@+id/img_close_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_xutou_close" />

        <TextView
            android:id="@+id/tv_toLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:text="登录"
            android:textColor="@color/color_3"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:text="欢迎来到油实惠-注册"
        android:textColor="@color/text_black"
        android:textSize="23sp" />

    <EditText
        android:id="@+id/et_phonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="手机号"
        android:inputType="number"
        android:maxLength="11"
        android:paddingTop="@dimen/dp_63"
        android:paddingBottom="@dimen/dp_18"
        android:textColor="@color/color_3"
        android:textColorHint="@color/text_gray"
        android:textCursorDrawable="@drawable/shape_edittext_cursor"
        android:textSize="18sp"
        android:theme="@style/MyEditText" />

    <RelativeLayout
        android:id="@+id/rl_psw_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_login_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="登录密码(6-18位字母、数字组合)"
            android:imeOptions="actionGo"
            android:inputType="textPassword"
            android:maxLength="18"
            android:paddingTop="@dimen/dp_18"
            android:paddingBottom="@dimen/dp_18"
            android:textColor="@color/color_3"
            android:textColorHint="@color/text_gray"
            android:textCursorDrawable="@drawable/shape_edittext_cursor"
            android:textSize="18sp"
            android:theme="@style/MyEditText" />

        <CheckBox
            android:id="@+id/img_eye"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_2"
            android:button="@null"
            android:checked="false"
            android:clickable="false"
            android:drawableTop="@drawable/login_checked_eye"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_yzm_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <EditText
            android:id="@+id/et_register_yzm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="短信验证码"
            android:maxLength="4"
            android:paddingTop="@dimen/dp_18"
            android:paddingBottom="@dimen/dp_18"
            android:singleLine="true"
            android:textColor="@color/color_3"
            android:textColorHint="@color/text_gray"
            android:textCursorDrawable="@drawable/shape_edittext_cursor"
            android:textSize="18sp"
            android:theme="@style/MyEditText" />

        <TextView
            android:id="@+id/tv_getyzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_2"
            android:text="获取验证码"
            android:textColor="@color/color_base"
            android:textSize="14sp"
            android:visibility="visible" />

    </RelativeLayout>

    <EditText
        android:id="@+id/et_inviteCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:hint="邀请码, 非必填"
        android:maxLength="11"
        android:paddingTop="@dimen/dp_18"
        android:paddingBottom="@dimen/dp_18"
        android:textColor="@color/color_3"
        android:textColorHint="@color/text_gray"
        android:textCursorDrawable="@drawable/shape_edittext_cursor"
        android:textSize="18sp"
        android:theme="@style/MyEditText" />

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_49"
        android:layout_marginTop="@dimen/dp_33"
        android:layout_marginRight="@dimen/dp_47"
        android:background="@drawable/bg_base_round"
        android:gravity="center"
        android:text="注册领取新人福利"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <CheckBox
            android:id="@+id/cb_user_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_user_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/dp_10"
            android:text="已阅读并同意《用户协议》"
            android:textColor="@color/text_cc"
            android:textSize="12sp" />

    </LinearLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_21"
        android:clickable="true"
        android:text="已阅读并同意《用户协议》"
        android:textColor="@color/text_cc"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_inviteCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawableRight="@drawable/icon_arrow"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="邀请码"
        android:textColor="@color/text_cc"
        android:textSize="14sp"
        android:visibility="gone" />


</LinearLayout>